<div class="bg-gradient-page page-container">
  <div class="content-wrapper">

    <!-- Header Section -->
    <div class="section-spacing">
      <div class="flex-between-wrap mb-6">
        <div class="min-w-0 flex-1">
          <div class="flex-center mb-2">
            <div class="bg-gradient-green icon-wrapper text-white">
              <svg class="icon-size-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h1 class="page-title">Users</h1>
          </div>
          <p class="page-subtitle">Manage user accounts and permissions</p>
        </div>

        <%= link_to new_user_path, class: "bg-gradient-blue text-white py-3.5 px-7 rounded-xl no-underline font-semibold text-sm inline-flex items-center gap-2 shadow-blue transition-all hover:shadow-blue-lg" do %>
          <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>Add New User</span>
        <% end %>
      </div>

      <!-- Breadcrumb -->
      <nav class="breadcrumb-nav">
        <ol class="breadcrumb-list">
          <li><%= link_to "Dashboard", root_path, class: "text-gray-500 no-underline hover:text-gray-700" %></li>
          <li class="breadcrumb-separator">/</li>
          <li class="breadcrumb-current">Users</li>
        </ol>
      </nav>
    </div>

    <!-- Search Card -->
    <div class="section-spacing">
      <div class="card-elevated overflow-hidden">

        <!-- Search Header -->
        <div class="card-header-gradient">
          <div class="flex-center">
            <div class="icon-wrapper-translucent">
              <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <h2 class="section-title">Search & Filter Users</h2>
          </div>
        </div>

        <!-- Search Body -->
        <div class="card-body">
          <%= form_for :search, url: users_path, method: :get, data: { controller: "search", search_target: "search", turbo_frame: "user-list", turbo_action: "advance" } do |f| %>
            <div class="form-grid-auto">

              <!-- Email Search -->
              <div>
                <label class="input-label">
                  <div class="label-with-icon">
                    <svg class="icon-size text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    Email
                  </div>
                </label>
                <%= f.text_field :email, value: params.dig(:search, :email),
                    class: "input-field",
                    placeholder: "Search by email...",
                    data: { action: "input->search#submit" } %>
              </div>

              <!-- Role Filter -->
              <div>
                <label class="input-label">
                  <div class="label-with-icon">
                    <svg class="icon-size text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    Role
                  </div>
                </label>
                <div class="relative">
                  <%= f.select :is_admin, options_for_select([["Admin", "true"], ["Contributor", "false"]], params.dig(:search, :is_admin)),
                      { prompt: "All roles" },
                      class: "select-field",
                      data: { action: "change->search#submit" } %>
                  <%= render "shared/dropdown_arrow" %>
                </div>
              </div>

              <!-- Order -->
              <div>
                <label class="input-label">
                  <div class="label-with-icon">
                    <svg class="icon-size text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"/>
                    </svg>
                    Sort Order
                  </div>
                </label>
                <div class="relative">
                  <%= f.select :order, options_for_select([["By most recently added", :desc], ["By least recently added", :asc]], params.dig(:search, :order)),
                      {},
                      class: "select-field",
                      data: { action: "change->search#submit" } %>
                  <%= render "shared/dropdown_arrow" %>
                </div>
              </div>
            </div>

            <!-- Clear Button -->
            <div class="mt-6 flex justify-end">
              <%= link_to "Clear Filters", users_path,
                  class: "bg-gray-100 text-gray-700 py-2.5 px-5 rounded-lg no-underline font-medium text-sm inline-flex items-center gap-2 transition-all border border-gray-300 hover:bg-gray-200" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Users Table Card -->
    <%= render 'user_list' %>
  </div>
</div>

<style>
  /* Enhanced button hover effects */
  a[href*="new_user"]:hover {
    transform: translateY(-3px) !important;
    box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.4), 0 10px 10px -5px rgba(59, 130, 246, 0.1) !important;
  }

  /* Table hover effects */
  tbody tr:hover {
    background-color: #f8fafc !important;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    /* Container adjustments */
    div[style*="max-width: 1200px"] {
      padding: 0 1rem !important;
      margin: 0 auto !important;
    }

    /* Page padding adjustments */
    div[style*="min-height: 100vh"] {
      padding: 1rem 0 !important;
    }

    /* Header adjustments */
    div[style*="justify-content: space-between"] {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 1rem !important;
    }

    /* Title adjustments */
    h1 {
      font-size: 2rem !important;
    }

    /* Hide less important columns on mobile */
    .hide-mobile {
      display: none !important;
    }

    /* Make remaining columns more compact */
    th, td {
      padding: 0.75rem 0.5rem !important;
      font-size: 0.875rem !important;
    }

    /* Card adjustments - prevent overflow */
    div[style*="border-radius: 1rem"] {
      border-radius: 0.5rem !important;
      margin: 0 !important;
      max-width: 100% !important;
      box-sizing: border-box !important;
    }

    /* Search grid to single column */
    div[style*="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr))"] {
      grid-template-columns: 1fr !important;
      gap: 1rem !important;
    }

    /* Stack pagination on mobile */
    div[style*="justify-content: space-between"][style*="align-items: center"] {
      flex-direction: column !important;
      gap: 1rem !important;
      align-items: flex-start !important;
    }

    /* Fix table overflow */
    .table-container {
      margin: 0 !important;
      padding: 0 !important;
    }

    /* Ensure table fits */
    table {
      min-width: 100% !important;
      width: 100% !important;
    }

    /* Action buttons stack on mobile */
    div[style*="display: flex; gap: 0.5rem; justify-content: flex-end"] {
      flex-direction: column !important;
      gap: 0.25rem !important;
      width: 100% !important;
    }

    /* Make buttons full width on mobile */
    div[style*="display: flex; gap: 0.5rem; justify-content: flex-end"] a,
    div[style*="display: flex; gap: 0.5rem; justify-content: flex-end"] button {
      width: 100% !important;
      justify-content: center !important;
    }
  }

  @media (max-width: 640px) {
    /* Very small screen adjustments */
    div[style*="max-width: 1200px"] {
      padding: 0 0.5rem !important;
    }

    /* Ensure no overflow */
    * {
      max-width: 100% !important;
      box-sizing: border-box !important;
    }

    /* Remove border radius on very small screens */
    div[style*="border-radius: 1rem"] {
      border-radius: 0.25rem !important;
      margin: 0 !important;
    }

    /* More compact table */
    th, td {
      padding: 0.5rem 0.25rem !important;
      font-size: 0.75rem !important;
      word-wrap: break-word !important;
      word-break: break-word !important;
    }

    /* Smaller user avatar */
    div[style*="width: 2.5rem; height: 2.5rem"] {
      width: 2rem !important;
      height: 2rem !important;
      font-size: 0.75rem !important;
    }

    /* Card padding adjustments */
    div[style*="padding: 2rem"] {
      padding: 1rem !important;
    }

    div[style*="padding: 1.5rem"] {
      padding: 1rem !important;
    }

    /* Prevent horizontal scroll */
    body, html {
      overflow-x: hidden !important;
    }

    /* Ensure cards don't exceed viewport */
    div[style*="background: white"] {
      max-width: calc(100vw - 1rem) !important;
      overflow: hidden !important;
    }
  }
</style>

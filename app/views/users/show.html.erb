<% content_for :title, @user.email %>

<% if notice %>
  <div style="background: #dcfce7; border: 1px solid #bbf7d0; color: #166534; padding: 1rem; border-radius: 0.5rem; margin-bottom: 2rem;">
    <%= notice %>
  </div>
<% end %>

<div style="min-height: 100vh; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); padding: 2rem 0;">
  <div style="max-width: 1000px; margin: 0 auto; padding: 0 1rem;">
    
    <!-- Header Section -->
    <div style="margin-bottom: 2rem;">
      <div style="display: flex; align-items: center; justify-content: between; gap: 1rem; margin-bottom: 1.5rem; flex-wrap: wrap;">
        <div style="display: flex; align-items: center; gap: 1rem;">
          <%= link_to users_path, style: "color: #6b7280; hover:color: #374151; transition: colors 0.2s;" do %>
            <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
          <% end %>
          <h1 style="font-size: 2rem; font-weight: 700; color: #1f2937; margin: 0;">
            <%= @user.email %>
          </h1>
          <% if @user.is_admin? %>
            <div style="background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); color: white; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500;">
              Administrator
            </div>
          <% else %>
            <div style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500;">
              Contributor
            </div>
          <% end %>
        </div>
        
        <!-- Action Buttons -->
        <div style="display: flex; gap: 0.75rem; flex-wrap: wrap;">
          <%= link_to edit_user_path(@user), style: "background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white; font-weight: 600; padding: 0.75rem 1.5rem; border-radius: 0.5rem; text-decoration: none; font-size: 0.875rem; box-shadow: 0 4px 6px -1px rgba(245, 158, 11, 0.3); transition: all 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;" do %>
            <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit User
          <% end %>
          
          <% if Current.user.is_admin? %>
            <div id="delete_user_<%= @user.id %>">
              <%= button_to @user, method: :delete, 
                  data: { confirm: "Are you sure you want to delete '#{@user.email}'? This action cannot be undone." },
                  style: "background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); color: white; font-weight: 600; padding: 0.75rem 1.5rem; border-radius: 0.5rem; border: none; cursor: pointer; font-size: 0.875rem; box-shadow: 0 4px 6px -1px rgba(220, 38, 38, 0.3); transition: all 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;" do %>
                <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Delete User
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Breadcrumb -->
      <nav style="font-size: 0.875rem; color: #6b7280;">
        <ol style="display: flex; gap: 0.5rem; list-style: none; padding: 0; margin: 0;">
          <li><%= link_to "Dashboard", root_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li><%= link_to "Users", users_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li style="color: #374151; font-weight: 500;"><%= @user.email %></li>
        </ol>
      </nav>
    </div>

    <!-- Main Content -->
    <div id="<%= dom_id @user %>">
      
      <!-- User Details Section -->
      <div style="margin-bottom: 2rem;">
        <div style="background: white; border-radius: 1rem; box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1); overflow: hidden; border: 1px solid #e5e7eb;">
          
          <!-- Card Header -->
          <div style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); padding: 2rem; color: white;">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
              <svg style="width: 2rem; height: 2rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              <h2 style="font-size: 1.5rem; font-weight: 700; margin: 0;">User Details</h2>
            </div>
            <p style="margin: 0; opacity: 0.9; font-size: 0.875rem;">ID: <%= @user.id %></p>
          </div>
          
          <!-- Card Body -->
          <div style="padding: 2rem;">
            <div style="display: grid; gap: 1.5rem;">
              
              <!-- Email -->
              <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 1rem; padding: 1rem; background: #f8fafc; border-radius: 0.5rem; border-left: 4px solid #10b981;">
                <div style="font-weight: 600; color: #374151; display: flex; align-items: center; gap: 0.5rem;">
                  <svg style="width: 1rem; height: 1rem; color: #10b981;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  Email:
                </div>
                <div style="color: #1f2937; font-family: monospace; background: white; padding: 0.5rem; border-radius: 0.25rem; border: 1px solid #e5e7eb;">
                  <%= @user.email %>
                </div>
              </div>
              
              <!-- Role -->
              <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 1rem; padding: 1rem; background: #f8fafc; border-radius: 0.5rem; border-left: 4px solid #10b981;">
                <div style="font-weight: 600; color: #374151; display: flex; align-items: center; gap: 0.5rem;">
                  <svg style="width: 1rem; height: 1rem; color: #10b981;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                  Role:
                </div>
                <div style="color: #1f2937;">
                  <% if @user.is_admin? %>
                    <div style="background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); color: white; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.375rem;">
                      <svg style="width: 0.75rem; height: 0.75rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                      </svg>
                      Administrator
                    </div>
                  <% else %>
                    <div style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.375rem;">
                      <svg style="width: 0.75rem; height: 0.75rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                      Contributor
                    </div>
                  <% end %>
                </div>
              </div>
              
              <!-- Created Date -->
              <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 1rem; padding: 1rem; background: #f8fafc; border-radius: 0.5rem; border-left: 4px solid #10b981;">
                <div style="font-weight: 600; color: #374151; display: flex; align-items: center; gap: 0.5rem;">
                  <svg style="width: 1rem; height: 1rem; color: #10b981;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  Account Created:
                </div>
                <div style="color: #1f2937; font-weight: 500;">
                  <%= @user.created_at.strftime('%B %d, %Y at %I:%M %p') %>
                </div>
              </div>
              
              <!-- Last Updated -->
              <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 1rem; padding: 1rem; background: #f8fafc; border-radius: 0.5rem; border-left: 4px solid #10b981;">
                <div style="font-weight: 600; color: #374151; display: flex; align-items: center; gap: 0.5rem;">
                  <svg style="width: 1rem; height: 1rem; color: #10b981;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                  </svg>
                  Last Updated:
                </div>
                <div style="color: #1f2937; font-weight: 500;">
                  <%= @user.updated_at.strftime('%B %d, %Y at %I:%M %p') %>
                </div>
              </div>
              
            </div>
          </div>
          
          <!-- Providers Footer -->
          <div style="background: #f9fafb; padding: 1.5rem; border-top: 1px solid #e5e7eb;">
            <div style="display: flex; align-items: center; gap: 1rem; flex-wrap: wrap;">
              <div style="display: flex; align-items: center; gap: 0.5rem; font-weight: 600; color: #374151;">
                <svg style="width: 1rem; height: 1rem; color: #10b981;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
                Associated Providers:
              </div>
              <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                <% if @user.providers.any? %>
                  <% @user.providers.each do |provider| %>
                    <%= link_to provider_path(provider), 
                        target: "_blank",
                        style: "background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); color: white; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600; text-decoration: none; transition: all 0.2s; display: inline-flex; align-items: center; gap: 0.25rem;",
                        onmouseover: "this.style.transform='scale(1.05)'",
                        onmouseout: "this.style.transform='scale(1)'" do %>
                      <%= provider.name %>
                      <svg style="width: 0.75rem; height: 0.75rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                    <% end %>
                  <% end %>
                <% else %>
                  <span style="color: #6b7280; font-style: italic;">No providers assigned</span>
                <% end %>
              </div>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Button hover effects */
  button:hover, a[href*="edit"]:hover {
    transform: translateY(-2px) !important;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.25) !important;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    /* Container adjustments */
    div[style*="max-width: 1000px"] {
      padding: 0 1rem !important;
      margin: 0 auto !important;
    }
    
    /* Page padding adjustments */
    div[style*="min-height: 100vh"] {
      padding: 1rem 0 !important;
    }
    
    /* Header adjustments */
    div[style*="justify-content: between"] {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 1rem !important;
    }
    
    /* Card adjustments - prevent overflow */
    div[style*="border-radius: 1rem"] {
      border-radius: 0.5rem !important;
      margin: 0 !important;
      max-width: 100% !important;
      box-sizing: border-box !important;
    }
    
    /* Grid adjustments */
    div[style*="grid-template-columns: 1fr 2fr"] {
      grid-template-columns: 1fr !important;
      gap: 0.5rem !important;
    }
    
    /* Card padding adjustments */
    div[style*="padding: 2rem"] {
      padding: 1.5rem 1rem !important;
    }
    
    /* Action buttons adjustments */
    div[style*="display: flex; gap: 0.75rem; flex-wrap: wrap"] {
      flex-direction: column !important;
      gap: 0.5rem !important;
    }
    
    /* Make buttons full width on mobile */
    div[style*="display: flex; gap: 0.75rem; flex-wrap: wrap"] a,
    div[style*="display: flex; gap: 0.75rem; flex-wrap: wrap"] button {
      width: 100% !important;
      justify-content: center !important;
    }
  }
  
  @media (max-width: 640px) {
    /* Very small screen adjustments */
    div[style*="max-width: 1000px"] {
      padding: 0 0.5rem !important;
    }
    
    /* Ensure no overflow */
    * {
      max-width: 100% !important;
      box-sizing: border-box !important;
    }
    
    /* Remove border radius on very small screens */
    div[style*="border-radius: 1rem"] {
      border-radius: 0.25rem !important;
      margin: 0 !important;
    }
    
    /* More compact padding */
    div[style*="padding: 2rem"] {
      padding: 1rem 0.75rem !important;
    }
    
    div[style*="padding: 1.5rem"] {
      padding: 1rem !important;
    }
    
    /* Smaller title */
    h1 {
      font-size: 1.75rem !important;
    }
    
    /* Prevent horizontal scroll */
    body, html {
      overflow-x: hidden !important;
    }
    
    /* Ensure cards don't exceed viewport */
    div[style*="background: white"] {
      max-width: calc(100vw - 1rem) !important;
      overflow: hidden !important;
    }
    
    /* Provider tags wrap better */
    div[style*="display: flex; gap: 0.5rem; flex-wrap: wrap"] {
      gap: 0.25rem !important;
    }
    
    /* Smaller provider tags */
    a[style*="border-radius: 9999px"] {
      font-size: 0.625rem !important;
      padding: 0.25rem 0.5rem !important;
    }
  }
</style>

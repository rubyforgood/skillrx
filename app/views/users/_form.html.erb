<%= form_with(model: user, class: "w-full") do |form| %>
  <!-- Error Messages -->
  <% if user.errors.any? %>
    <div class="alert-error">
      <div class="flex-center-sm mb-4">
        <svg class="icon-size-md text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h3 class="alert-error-title">
          <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
        </h3>
      </div>
      <ul class="alert-error-list">
        <% user.errors.each do |error| %>
          <li class="mb-1"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Form Fields -->
  <div class="form-grid">

    <!-- Email Field -->
    <div>
      <label class="form-label-styled">
        <div class="label-with-icon">
          <svg class="icon-size text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          Email Address
          <span class="text-required">*</span>
        </div>
      </label>
      <%= form.email_field :email,
          class: "form-input",
          placeholder: "Enter email address...",
          autofocus: true,
          required: true %>
    </div>

    <!-- Password Field -->
    <div>
      <label class="form-label-styled">
        <div class="label-with-icon">
          <svg class="icon-size text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
          Password
          <% if !user.persisted? %>
            <span class="text-required">*</span>
          <% end %>
        </div>
      </label>
      <%= form.password_field :password,
          class: "form-input",
          placeholder: "Enter password...",
          required: !user.persisted? %>
      <p class="text-muted">
        <% if user.persisted? %>
          Leave blank to keep current password
        <% else %>
          Minimum 8 characters required
        <% end %>
      </p>
    </div>

    <!-- Admin Checkbox -->
    <div class="info-panel">
      <div class="flex items-start gap-4">
        <div class="flex items-center mt-0.5">
          <%= form.check_box :is_admin,
              class: "w-5 h-5 accent-red-600 cursor-pointer rounded" %>
        </div>
        <div class="flex-1">
          <label for="<%= form.field_id(:is_admin) %>" class="cursor-pointer block">
            <div class="flex-center-sm mb-2">
              <svg class="icon-size-md text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              <span class="font-semibold text-gray-700 text-sm">Administrator Privileges</span>
            </div>
            <p class="m-0 text-gray-500 text-xs leading-relaxed">
              Grant this user full administrative access including user management, system settings, and all data modification capabilities.
            </p>
          </label>
        </div>
      </div>
    </div>

    <!-- Providers Selection -->
    <div>
      <label class="form-label-styled">
        <div class="label-with-icon">
          <svg class="icon-size text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          Associated Providers
          <span class="text-required">*</span>
        </div>
      </label>
      <div data-controller="select-tags">
        <%= form.select :provider_ids,
                        options_from_collection_for_select(
                          Provider.order(:name),
                          :id,
                          :name,
                          user.providers.ids
            ),
            { prompt: "Select providers", include_blank: false },
            {
              multiple: true,
              data: { "allow-new": "true", "allow-clear": "true", "select-tags-target": "tagList" }
            } %>
        </div>
      <p class="text-muted">
        Select which providers this user can access and manage content for.
      </p>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="mt-12 flex gap-4 justify-end flex-wrap">
    <%= link_to users_path,
        class: "bg-gray-100 text-gray-700 py-3.5 px-7 rounded-xl no-underline font-semibold text-sm inline-flex items-center gap-2 transition-all border border-gray-300 hover:bg-gray-200 hover:-translate-y-0.5" do %>
      <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Cancel
    <% end %>

    <%= form.submit user.persisted? ? "Update User" : "Create User",
        class: "bg-gradient-green text-white py-3.5 px-7 rounded-xl border-0 cursor-pointer font-semibold text-sm inline-flex items-center gap-2 shadow-lg transition-all hover:-translate-y-1 hover:shadow-xl" %>
  </div>
<% end %>


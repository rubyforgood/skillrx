<%= turbo_frame_tag "user-list" do %>
  <div class="card-elevated overflow-hidden">

    <!-- Card Header -->
    <div class="bg-gradient-green p-8 text-white">
      <div class="flex-between-wrap">
        <div class="flex-center">
          <div class="icon-wrapper-translucent">
            <svg class="icon-size-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold m-0">User List</h2>
            <p class="mt-1 m-0 text-white/80 text-sm">
              <%= pluralize(@users.count, 'user') %> found
            </p>
          </div>
        </div>

        <div class="flex gap-3 items-center">
          <div class="bg-white/10 py-2 px-4 rounded-full text-xs font-medium">
            Total: <%= @users.count %>
          </div>
        </div>
      </div>
    </div>

    <!-- Table Content -->
    <div class="p-0">
      <div class="table-container overflow-x-auto">
        <table class="w-full border-collapse">
          <thead>
            <tr class="bg-gradient-gray border-b-2 border-gray-200">
              <th class="table-header">
                <div class="flex-center-sm">
                  <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  Email
                </div>
              </th>
              <th class="table-header">
                <div class="flex-center-sm">
                  <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                  Role
                </div>
              </th>
              <th class="table-header">
                <div class="flex-center-sm">
                  <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                  </svg>
                  Providers
                </div>
              </th>
              <th class="table-header">
                <div class="flex-center-sm">
                  <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  Created
                </div>
              </th>
              <th class="table-header text-right">
                Actions
              </th>
            </tr>
          </thead>
          <tbody>
            <% if @users.any? %>
              <% @users.each_with_index do |user, index| %>
                <tr class="border-b border-gray-100 transition-all hover:bg-gray-50">
                  <td class="table-cell">
                    <div class="flex-center">
                      <div class="user-avatar">
                        <%= user.email.first.upcase %>
                      </div>
                      <div>
                        <div class="font-semibold text-gray-900 text-sm"><%= user.email %></div>
                        <div class="text-gray-500 text-xs">
                          ID: <%= user.id %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="table-cell">
                    <% if user.is_admin? %>
                      <div class="badge-admin">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                        Administrator
                      </div>
                    <% else %>
                      <div class="bg-gradient-green badge-contributor">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                        Contributor
                      </div>
                    <% end %>
                  </td>
                  <td class="table-cell">
                    <div class="flex gap-1.5 flex-wrap">
                      <% if user.providers.any? %>
                        <% user.providers.each do |provider| %>
                          <div class="bg-gradient-purple badge-provider">
                            <%= provider.name %>
                          </div>
                        <% end %>
                      <% else %>
                        <div class="text-gray-400 italic text-xs">
                          No providers
                        </div>
                      <% end %>
                    </div>
                  </td>
                  <td class="table-cell">
                    <div class="text-gray-500 text-sm">
                      <%= user.created_at.strftime('%b %d, %Y') %>
                    </div>
                  </td>
                  <td class="table-cell text-right">
                    <div class="flex gap-2 justify-end">
                      <%= link_to user, data: { turbo_frame: "_top" }, class: "btn-view" do %>
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        <span>View</span>
                      <% end %>
                      <%= link_to edit_user_path(user), data: { turbo_frame: "_top" }, class: "btn-edit" do %>
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        <span>Edit</span>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>

      <% unless @users.any? %>
        <!-- Empty state -->
        <div class="empty-state">
          <div class="text-gray-400">
            <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <p class="text-base font-medium text-gray-500 m-0">No users found</p>
            <p class="text-sm text-gray-400 mt-2 m-0">Try adjusting your search filters.</p>
          </div>
        </div>
      <% end %>

      <!-- Pagination -->
      <div class="pagination-footer">
        <div class="text-gray-500 text-sm">
          Showing <%= @users.count %> of <%= @pagy.count %> users
        </div>
        <div>
          <%= render "shared/pagination", pagy: @pagy %>
        </div>
      </div>
    </div>
  </div>
<% end %>

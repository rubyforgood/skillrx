<% content_for :title, "Regions" %>

<div style="min-height: 100vh; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); padding: 2rem 0;">
  <div style="max-width: 1200px; margin: 0 auto; padding: 0 1rem; overflow-x: hidden;">
    
    <!-- Header Section -->
    <div style="margin-bottom: 2rem;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
        <div style="min-width: 0; flex: 1;">
          <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
            <div style="background: linear-gradient(135deg, #059669 0%, #047857 100%); color: white; padding: 0.75rem; border-radius: 0.75rem; flex-shrink: 0;">
              <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h1 style="font-size: 2.5rem; font-weight: 700; color: #1f2937; margin: 0; min-width: 0;">Regions</h1>
          </div>
          <p style="color: #6b7280; margin: 0; font-size: 1rem;">Manage geographical regions and service areas</p>
        </div>
        
        <%= link_to new_region_path, style: "background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 0.875rem 1.75rem; border-radius: 0.75rem; text-decoration: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; box-shadow: 0 10px 15px -3px rgba(16, 185, 129, 0.4), 0 4px 6px -2px rgba(16, 185, 129, 0.05); transition: all 0.2s;", data: {turbo: false } do %>
          <svg style="width: 1.125rem; height: 1.125rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>Add New Region</span>
        <% end %>
      </div>
      
      <!-- Breadcrumb -->
      <nav style="font-size: 0.875rem; color: #6b7280;">
        <ol style="display: flex; gap: 0.5rem; list-style: none; padding: 0; margin: 0;">
          <li><%= link_to "Dashboard", root_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li style="color: #374151; font-weight: 500;">Regions</li>
        </ol>
      </nav>
    </div>

    <!-- Regions Table Card -->
    <div style="background: white; border-radius: 1rem; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); overflow: hidden;">
      
      <!-- Card Header -->
      <div style="background: linear-gradient(135deg, #059669 0%, #047857 100%); padding: 2rem; color: white;">
        <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
          <div style="display: flex; align-items: center; gap: 1rem;">
            <div style="background: rgba(255, 255, 255, 0.2); padding: 0.75rem; border-radius: 0.75rem;">
              <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
              </svg>
            </div>
            <div>
              <h2 style="font-size: 1.5rem; font-weight: 700; margin: 0;">Service Regions</h2>
              <p style="margin: 0.25rem 0 0 0; color: rgba(255, 255, 255, 0.8); font-size: 0.875rem;">
                <%= pluralize(@regions.count, 'region') %> configured
              </p>
            </div>
          </div>
          
          <div style="display: flex; gap: 0.75rem; align-items: center;">
            <div style="background: rgba(255, 255, 255, 0.1); padding: 0.5rem 1rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500;">
              Total: <%= @regions.count %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Table Content -->
      <div style="padding: 0;">
        <div class="table-container" style="overflow-x: auto;">
          <table style="width: 100%; border-collapse: collapse;">
            <thead>
              <tr style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border-bottom: 2px solid #e2e8f0;">
                <th style="padding: 1.25rem 1.5rem; text-align: left; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                  <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    Region Name
                  </div>
                </th>
                <th class="hide-mobile" style="padding: 1.25rem 1.5rem; text-align: left; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                  <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                    </svg>
                    Providers
                  </div>
                </th>
                <th style="padding: 1.25rem 1.5rem; text-align: right; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if @regions.any? %>
                <% @regions.each_with_index do |region, index| %>
                  <tr style="border-bottom: 1px solid #f1f5f9; transition: all 0.2s;" onmouseover="this.style.backgroundColor='#f8fafc'" onmouseout="this.style.backgroundColor='white'">
                    <td style="padding: 1.5rem;">
                      <div style="display: flex; align-items: center; gap: 0.75rem;">
                        <div style="width: 2.5rem; height: 2.5rem; background: linear-gradient(135deg, #10b981 0%, #059669 100%); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; font-size: 0.875rem;">
                          <%= region.name.first.upcase %>
                        </div>
                        <div>
                          <div style="font-weight: 600; color: #111827; font-size: 0.875rem;"><%= region.name %></div>
                          <div style="color: #6b7280; font-size: 0.75rem;">Service Region</div>
                        </div>
                      </div>
                    </td>
                    <td class="hide-mobile" style="padding: 1.5rem;">
                      <span style="display: inline-flex; align-items: center; padding: 0.375rem 0.75rem; background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); color: white; border-radius: 9999px; font-size: 0.75rem; font-weight: 500;">
                        1 provider
                      </span>
                    </td>
                    <td style="padding: 1.5rem; text-align: right;">
                      <div style="display: flex; gap: 0.5rem; justify-content: flex-end;">
                        <%= link_to region, style: "background: #3b82f6; color: white; padding: 0.5rem 0.75rem; border-radius: 0.375rem; text-decoration: none; font-size: 0.75rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.375rem; transition: all 0.2s;", data: { turbo: false } do %>
                          <svg style="width: 0.875rem; height: 0.875rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                          </svg>
                          <span>View</span>
                        <% end %>
                        <%= link_to edit_region_path(region), style: "background: #6b7280; color: white; padding: 0.5rem 0.75rem; border-radius: 0.375rem; text-decoration: none; font-size: 0.75rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.375rem; transition: all 0.2s;", data: { turbo: false } do %>
                          <svg style="width: 0.875rem; height: 0.875rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                          </svg>
                          <span>Edit</span>
                        <% end %>
                        <%= link_to region, method: :delete, data: { confirm: "Are you sure you want to delete this region?" }, style: "background: #dc2626; color: white; padding: 0.5rem 0.75rem; border-radius: 0.375rem; text-decoration: none; font-size: 0.75rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.375rem; transition: all 0.2s;" do %>
                          <svg style="width: 0.875rem; height: 0.875rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                          </svg>
                          <span>Delete</span>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="3" style="padding: 3rem 1.5rem; text-align: center;">
                    <div style="color: #9ca3af;">
                      <svg style="width: 3rem; height: 3rem; margin: 0 auto 1rem; color: #d1d5db;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                      <p style="font-size: 1rem; font-weight: 500; color: #6b7280; margin: 0;">No regions found</p>
                      <p style="font-size: 0.875rem; color: #9ca3af; margin: 0.5rem 0 0 0;">Create your first region to get started.</p>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Enhanced button hover effects */
  a[href*="new_region"]:hover {
    transform: translateY(-3px);
    box-shadow: 0 20px 25px -5px rgba(16, 185, 129, 0.4), 0 10px 10px -5px rgba(16, 185, 129, 0.1) !important;
  }
  
  /* Table hover effects */
  tbody tr:hover {
    background-color: #f8fafc !important;
  }
  
  /* Action button hover effects */
  a[href*="regions/"]:hover {
    transform: translateY(-1px);
  }
  
  a[href*="regions/"][style*="background: #3b82f6"]:hover {
    background: #2563eb !important;
  }
  
  a[href*="edit"]:hover {
    background: #4b5563 !important;
  }
  
  a[style*="background: #dc2626"]:hover {
    background: #b91c1c !important;
  }
  
  /* Table row hover animation */
  tbody tr:hover td:first-child > div > div:first-child {
    transform: scale(1.05);
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    /* Container adjustments */
    div[style*="max-width: 1200px"] {
      padding: 0 0.5rem !important;
    }
    
    /* Page padding adjustments */
    div[style*="min-height: 100vh"] {
      padding: 1rem 0 !important;
    }
    
    /* Header adjustments */
    div[style*="justify-content: space-between"] {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 1rem !important;
    }
    
    /* Title adjustments */
    h1 {
      font-size: 2rem !important;
    }
    
    /* Hide less important columns on mobile */
    .hide-mobile {
      display: none !important;
    }
    
    /* Make remaining columns more compact */
    th, td {
      padding: 0.75rem 0.5rem !important;
      font-size: 0.875rem !important;
    }
    
    /* Card adjustments */
    div[style*="border-radius: 1rem"] {
      border-radius: 0.5rem !important;
      margin: 0 -0.5rem !important;
    }
    
    /* Card header adjustments */
    div[style*="background: linear-gradient(135deg, #059669"] {
      padding: 1.5rem 1rem !important;
    }
    
    /* Table container */
    .table-container {
      overflow-x: auto !important;
      -webkit-overflow-scrolling: touch !important;
    }
  }
  
  @media (max-width: 640px) {
    /* Further mobile adjustments */
    div[style*="padding: 0 1rem"] {
      padding: 0 0.25rem !important;
    }
    
    /* Extend cards to screen edge on very small screens */
    div[style*="border-radius: 1rem"] {
      border-radius: 0 !important;
      margin: 0 -0.25rem !important;
    }
    
    /* Reduce padding on cards */
    div[style*="padding: 2rem"] {
      padding: 1rem 0.75rem !important;
    }
    
    /* Smaller text on very small screens */
    h1 {
      font-size: 1.75rem !important;
    }
    
    /* Even more compact table */
    th, td {
      padding: 0.5rem 0.25rem !important;
      font-size: 0.75rem !important;
    }
    
    /* Make action buttons more compact */
    td[style*="text-align: right"] a {
      padding: 0.375rem 0.5rem !important;
      font-size: 0.625rem !important;
    }
    
    /* Reduce title avatar size */
    div[style*="width: 2.5rem; height: 2.5rem"] {
      width: 2rem !important;
      height: 2rem !important;
      font-size: 0.75rem !important;
    }
    
    /* Ensure no horizontal overflow */
    * {
      max-width: 100% !important;
      box-sizing: border-box !important;
    }
    
    /* Force word wrapping */
    th, td {
      word-wrap: break-word !important;
      word-break: break-word !important;
    }
  }
</style>

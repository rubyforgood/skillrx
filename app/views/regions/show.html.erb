<% content_for :title, @region.name %>

<div class="bg-gradient-page page-container">
  <div class="form-container">

    <!-- Header Section -->
    <div class="section-spacing">
      <div class="flex-between-wrap mb-6">
        <div class="min-w-0 flex-1">
          <div class="flex items-center gap-4 mb-2">
            <div class="bg-gradient-green text-white p-3 rounded-xl flex-shrink-0">
              <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h1 class="text-4xl font-bold text-gray-800 m-0 min-w-0"><%= @region.name %></h1>
          </div>
          <p class="text-gray-500 m-0 text-base">Regional service details and configuration</p>
        </div>

        <div class="flex gap-3 flex-wrap">
          <%= link_to edit_region_path(@region), class: "bg-gradient-blue text-white py-3.5 px-7 rounded-xl no-underline font-semibold text-sm inline-flex items-center gap-2 shadow-blue transition-all hover:-translate-y-0.5", data: {turbo: false } do %>
            <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <span>Edit Region</span>
          <% end %>
        </div>
      </div>

      <!-- Breadcrumb -->
      <nav class="breadcrumb-nav">
        <ol class="breadcrumb-list">
          <li><%= link_to "Dashboard", root_path, class: "text-gray-500 no-underline hover:text-gray-700" %></li>
          <li class="breadcrumb-separator">/</li>
          <li><%= link_to "Regions", regions_path, class: "text-gray-500 no-underline hover:text-gray-700" %></li>
          <li class="breadcrumb-separator">/</li>
          <li class="breadcrumb-current"><%= @region.name %></li>
        </ol>
      </nav>
    </div>

    <!-- Success Message -->
    <% if notice %>
      <div class="alert-success flex items-center gap-3">
        <svg class="icon-size-md flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="font-medium"><%= notice %></span>
      </div>
    <% end %>

    <!-- Region Details Card -->
    <div class="card-elevated overflow-hidden mb-8">

      <!-- Card Header -->
      <div class="bg-gradient-green p-8 text-white">
        <div class="flex-center">
          <div class="icon-wrapper-translucent">
            <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold m-0">Region Information</h2>
            <p class="mt-1 m-0 text-white/80 text-sm">
              Service area details and statistics
            </p>
          </div>
        </div>
      </div>

      <!-- Card Content -->
      <div class="card-body">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

          <!-- Region Name -->
          <div class="bg-gradient-gray p-6 rounded-xl border border-gray-200">
            <div class="flex items-center gap-3 mb-4">
              <div class="bg-gradient-green text-white p-2 rounded-lg">
                <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-700 m-0">Region Name</h3>
            </div>
            <p class="text-2xl font-bold text-gray-800 m-0"><%= @region.name %></p>
            <p class="text-sm text-gray-500 mt-2 m-0">Primary service region identifier</p>
          </div>

          <!-- Provider Count -->
          <div class="bg-gradient-gray p-6 rounded-xl border border-gray-200">
            <div class="flex items-center gap-3 mb-4">
              <div class="bg-gradient-blue text-white p-2 rounded-lg">
                <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-700 m-0">Associated Providers</h3>
            </div>
            <p class="text-2xl font-bold text-gray-800 m-0">1</p>
            <p class="text-sm text-gray-500 mt-2 m-0">Active healthcare providers in this region</p>
          </div>

        </div>

        <!-- Region Statistics -->
        <div class="mt-8 pt-8 border-t border-gray-200">
          <h3 class="text-xl font-semibold text-gray-700 m-0 mb-4">Region Statistics</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">

            <div class="text-center p-4 bg-gradient-to-br from-amber-100 to-amber-200 rounded-lg border border-amber-400">
              <div class="text-2xl font-bold text-amber-900">1</div>
              <div class="text-sm text-amber-800 font-medium">Total Providers</div>
            </div>

            <div class="text-center p-4 bg-gradient-to-br from-blue-100 to-blue-200 rounded-lg border border-blue-400">
              <div class="text-2xl font-bold text-blue-900">Active</div>
              <div class="text-sm text-blue-800 font-medium">Service Status</div>
            </div>

          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-4 justify-between items-center flex-wrap">
      <%= link_to regions_path, class: "bg-gray-500 text-white py-3.5 px-7 rounded-xl no-underline font-semibold text-sm inline-flex items-center gap-2 transition-all hover:bg-gray-600 hover:-translate-y-0.5" do %>
        <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span>Back to Regions</span>
      <% end %>

      <div class="flex gap-3">
        <%= link_to edit_region_path(@region), class: "bg-gradient-blue text-white py-3.5 px-7 rounded-xl no-underline font-semibold text-sm inline-flex items-center gap-2 shadow-blue transition-all hover:-translate-y-0.5", data: { turbo: false } do %>
          <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          <span>Edit</span>
        <% end %>

        <%= button_to @region, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this region? This action cannot be undone." }, class: "bg-gradient-red text-white py-3.5 px-7 rounded-xl border-0 font-semibold text-sm inline-flex items-center gap-2 cursor-pointer shadow-red transition-all hover:-translate-y-0.5" do %>
          <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          <span>Delete Region</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

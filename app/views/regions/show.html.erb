<% content_for :title, @region.name %>

<div class="bg-gradient-page" style="min-height: 100vh; padding: 2rem 0;">
  <div style="max-width: 800px; margin: 0 auto; padding: 0 1rem;">
    
    <!-- Header Section -->
    <div style="margin-bottom: 2rem;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
        <div style="min-width: 0; flex: 1;">
          <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
            <div style="background: linear-gradient(135deg, #059669 0%, #047857 100%); color: white; padding: 0.75rem; border-radius: 0.75rem; flex-shrink: 0;">
              <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h1 style="font-size: 2.5rem; font-weight: 700; color: #1f2937; margin: 0; min-width: 0;"><%= @region.name %></h1>
          </div>
          <p style="color: #6b7280; margin: 0; font-size: 1rem;">Regional service details and configuration</p>
        </div>
        
        <div style="display: flex; gap: 0.75rem; flex-wrap: wrap;">
          <%= link_to edit_region_path(@region), class: "bg-gradient-blue", style: "color: white; padding: 0.875rem 1.75rem; border-radius: 0.75rem; text-decoration: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.4), 0 4px 6px -2px rgba(59, 130, 246, 0.05); transition: all 0.2s;", data: {turbo: false } do %>
            <svg style="width: 1.125rem; height: 1.125rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <span>Edit Region</span>
          <% end %>
        </div>
      </div>
      
      <!-- Breadcrumb -->
      <nav style="font-size: 0.875rem; color: #6b7280;">
        <ol style="display: flex; gap: 0.5rem; list-style: none; padding: 0; margin: 0;">
          <li><%= link_to "Dashboard", root_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li><%= link_to "Regions", regions_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li style="color: #374151; font-weight: 500;"><%= @region.name %></li>
        </ol>
      </nav>
    </div>

    <!-- Success Message -->
    <% if notice %>
      <div style="background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%); border: 1px solid #86efac; color: #166534; padding: 1rem 1.5rem; border-radius: 0.75rem; margin-bottom: 2rem; display: flex; align-items: center; gap: 0.75rem;">
        <svg style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span style="font-weight: 500;"><%= notice %></span>
      </div>
    <% end %>

    <!-- Region Details Card -->
    <div style="background: white; border-radius: 1rem; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); overflow: hidden; margin-bottom: 2rem;">
      
      <!-- Card Header -->
      <div style="background: linear-gradient(135deg, #059669 0%, #047857 100%); padding: 2rem; color: white;">
        <div style="display: flex; align-items: center; gap: 1rem;">
          <div style="background: rgba(255, 255, 255, 0.2); padding: 0.75rem; border-radius: 0.75rem;">
            <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h2 style="font-size: 1.5rem; font-weight: 700; margin: 0;">Region Information</h2>
            <p style="margin: 0.25rem 0 0 0; color: rgba(255, 255, 255, 0.8); font-size: 0.875rem;">
              Service area details and statistics
            </p>
          </div>
        </div>
      </div>
      
      <!-- Card Content -->
      <div style="padding: 2rem;">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">
          
          <!-- Region Name -->
          <div class="bg-gradient-gray" style="padding: 1.5rem; border-radius: 0.75rem; border: 1px solid #e2e8f0;">
            <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 1rem;">
              <div style="background: linear-gradient(135deg, #059669 0%, #047857 100%); color: white; padding: 0.5rem; border-radius: 0.5rem;">
                <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <h3 style="font-size: 1.125rem; font-weight: 600; color: #374151; margin: 0;">Region Name</h3>
            </div>
            <p style="font-size: 1.5rem; font-weight: 700; color: #1f2937; margin: 0;"><%= @region.name %></p>
            <p style="font-size: 0.875rem; color: #6b7280; margin: 0.5rem 0 0 0;">Primary service region identifier</p>
          </div>
          
          <!-- Provider Count -->
          <div class="bg-gradient-gray" style="padding: 1.5rem; border-radius: 0.75rem; border: 1px solid #e2e8f0;">
            <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 1rem;">
              <div class="bg-gradient-blue" style="color: white; padding: 0.5rem; border-radius: 0.5rem;">
                <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h3 style="font-size: 1.125rem; font-weight: 600; color: #374151; margin: 0;">Associated Providers</h3>
            </div>
            <p style="font-size: 1.5rem; font-weight: 700; color: #1f2937; margin: 0;">1</p>
            <p style="font-size: 0.875rem; color: #6b7280; margin: 0.5rem 0 0 0;">Active healthcare providers in this region</p>
          </div>
          
        </div>
        
        <!-- Region Statistics -->
        <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #e5e7eb;">
          <h3 style="font-size: 1.25rem; font-weight: 600; color: #374151; margin: 0 0 1rem 0;">Region Statistics</h3>
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
            
            <div style="text-align: center; padding: 1rem; background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border-radius: 0.5rem; border: 1px solid #f59e0b;">
              <div style="font-size: 1.5rem; font-weight: 700; color: #92400e;">1</div>
              <div style="font-size: 0.875rem; color: #78350f; font-weight: 500;">Total Providers</div>
            </div>
            
            <div style="text-align: center; padding: 1rem; background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%); border-radius: 0.5rem; border: 1px solid #3b82f6;">
              <div style="font-size: 1.5rem; font-weight: 700; color: #1e40af;">Active</div>
              <div style="font-size: 0.875rem; color: #1e3a8a; font-weight: 500;">Service Status</div>
            </div>
            
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div style="display: flex; gap: 1rem; justify-content: space-between; align-items: center; flex-wrap: wrap;">
      <%= link_to regions_path, style: "background: #6b7280; color: white; padding: 0.875rem 1.75rem; border-radius: 0.75rem; text-decoration: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.2s;" do %>
        <svg style="width: 1.125rem; height: 1.125rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span>Back to Regions</span>
      <% end %>
      
      <div style="display: flex; gap: 0.75rem;">
        <%= link_to edit_region_path(@region), class: "bg-gradient-blue", style: "color: white; padding: 0.875rem 1.75rem; border-radius: 0.75rem; text-decoration: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.2s;", data: { turbo: false } do %>
          <svg style="width: 1.125rem; height: 1.125rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          <span>Edit</span>
        <% end %>
        
        <%= button_to @region, method: :delete, data: { confirm: "Are you sure you want to delete this region? This action cannot be undone." }, style: "background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); color: white; padding: 0.875rem 1.75rem; border-radius: 0.75rem; border: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; cursor: pointer; transition: all 0.2s;" do %>
          <svg style="width: 1.125rem; height: 1.125rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          <span>Delete Region</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  /* Button hover effects */
  a:hover, button:hover {
    transform: translateY(-2px);
  }
  
  a[style*="background: #6b7280"]:hover {
    background: #4b5563 !important;
  }
  
  a[style*="background: linear-gradient(135deg, #3b82f6"]:hover {
    box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.4), 0 10px 10px -5px rgba(59, 130, 246, 0.1) !important;
  }
  
  button[style*="background: linear-gradient(135deg, #dc2626"]:hover {
    box-shadow: 0 20px 25px -5px rgba(220, 38, 38, 0.4), 0 10px 10px -5px rgba(220, 38, 38, 0.1) !important;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    div[style*="max-width: 800px"] {
      padding: 0 0.5rem !important;
    }
    
    div[style*="min-height: 100vh"] {
      padding: 1rem 0 !important;
    }
    
    div[style*="justify-content: space-between"] {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 1rem !important;
    }
    
    h1 {
      font-size: 2rem !important;
    }
    
    div[style*="grid-template-columns: repeat(auto-fit, minmax(300px, 1fr))"] {
      grid-template-columns: 1fr !important;
    }
    
    div[style*="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))"] {
      grid-template-columns: repeat(2, 1fr) !important;
    }
  }
  
  @media (max-width: 640px) {
    div[style*="padding: 0 1rem"] {
      padding: 0 0.5rem !important;
    }
    
    div[style*="padding: 2rem"] {
      padding: 1rem !important;
    }
    
    h1 {
      font-size: 1.75rem !important;
    }
    
    div[style*="grid-template-columns: repeat(2, 1fr)"] {
      grid-template-columns: 1fr !important;
    }
  }
</style>

<div class="custom-pagination">
  <%= custom_pagy_nav(pagy) %>
</div>

<style>
.custom-pagination {
  display: flex;
  justify-content: center;
  margin: 1rem 0;
}

.pagination-nav {
  display: flex;
  align-items: center;
}

.pagination-list {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  list-style: none;
  margin: 0;
  padding: 0;
}

.pagination-item {
  display: flex;
}

.pagination-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.5rem 0.75rem;
  min-width: 2.5rem;
  height: 2.5rem;
  font-size: 0.875rem;
  font-weight: 500;
  color: #6b7280;
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 0.5rem;
  text-decoration: none;
  transition: all 0.2s ease-in-out;
  cursor: pointer;
  user-select: none;
}

.pagination-link:hover {
  color: #3b82f6;
  background: #f8fafc;
  border-color: #3b82f6;
  transform: translateY(-1px);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.pagination-link:focus {
  outline: none;
  ring: 2px solid #3b82f6;
  ring-offset: 2px;
}

.pagination-current .pagination-link {
  color: white;
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  border-color: #3b82f6;
  font-weight: 600;
  box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.4), 0 2px 4px -1px rgba(59, 130, 246, 0.1);
}

.pagination-current .pagination-link:hover {
  color: white;
  background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%);
  transform: none;
}

.pagination-disabled .pagination-link {
  color: #d1d5db;
  background: #f9fafb;
  border-color: #f3f4f6;
  cursor: not-allowed;
  pointer-events: none;
}

.pagination-gap .pagination-link {
  border: none;
  background: transparent;
  cursor: default;
  pointer-events: none;
}

.pagination-gap .pagination-link:hover {
  color: #6b7280;
  background: transparent;
  border: none;
  transform: none;
  box-shadow: none;
}

.pagination-prev,
.pagination-next {
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  min-width: auto;
}

.pagination-text {
  font-weight: 500;
}

.pagination-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Mobile responsiveness */
@media (max-width: 640px) {
  .pagination-list {
    gap: 0.125rem;
  }
  
  .pagination-link {
    min-width: 2rem;
    height: 2rem;
    padding: 0.375rem 0.5rem;
    font-size: 0.75rem;
  }
  
  .pagination-prev,
  .pagination-next {
    padding: 0.375rem 0.75rem;
  }
  
  .pagination-text {
    display: none;
  }
  
  .pagination-prev .pagination-icon,
  .pagination-next .pagination-icon {
    margin: 0;
  }
}

/* Extra small screens - hide some page numbers */
@media (max-width: 480px) {
  .pagination-item:not(.pagination-current):not(:first-child):not(:last-child):not(:nth-last-child(2)):not(:nth-child(2)) {
    display: none;
  }
  
  .pagination-item:nth-child(n+6):not(:last-child):not(:nth-last-child(2)) {
    display: none;
  }
}

/* Ensure proper spacing in pagination container */
.custom-pagination + * {
  margin-top: 1rem;
}

* + .custom-pagination {
  margin-top: 1rem;
}
</style>

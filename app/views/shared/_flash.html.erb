<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert <%= flash_class(name) %> alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>

<% content_for :title, "New provider" %>

<div class="bg-gradient-page page-container">
  <div class="content-wrapper">

    <!-- Header Section -->
    <div class="section-spacing">
      <div class="flex items-center gap-4 mb-6">
        <%= link_to providers_path, class: "text-gray-500 hover:text-gray-700 transition-colors" do %>
          <svg class="icon-size-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold text-gray-800 m-0">
          Add New Provider
        </h1>
      </div>

      <!-- Breadcrumb -->
      <nav class="breadcrumb-nav">
        <ol class="breadcrumb-list">
          <li><%= link_to "Dashboard", root_path, class: "text-gray-500 no-underline hover:text-gray-700" %></li>
          <li class="breadcrumb-separator">/</li>
          <li><%= link_to "Providers", providers_path, class: "text-gray-500 no-underline hover:text-gray-700" %></li>
          <li class="breadcrumb-separator">/</li>
          <li class="breadcrumb-current">New Provider</li>
        </ol>
      </nav>
    </div>

    <!-- Main Form Card -->
    <div class="card-elevated overflow-hidden">

      <!-- Card Header -->
      <div class="bg-gradient-to-br from-blue-700 to-indigo-800 p-8 text-white">
        <div class="flex-center">
          <div class="icon-wrapper-translucent">
            <svg class="icon-size-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold m-0">Provider Information</h2>
            <p class="mt-2 m-0 text-white/80">
              Add a new healthcare provider to the system
            </p>
          </div>
        </div>
      </div>

      <!-- Form Content -->
      <div class="card-body">
        <%= render "form", provider: @provider %>
      </div>
    </div>

    <!-- Help Section -->
    <div class="mt-8 bg-gray-50 border border-gray-200 rounded-xl p-6">
      <div class="flex items-start gap-4">
        <div class="bg-blue-100 text-blue-800 p-2 rounded-lg mt-1 flex-shrink-0">
          <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div>
          <h3 class="text-base font-semibold text-gray-700 m-0 mb-3">Adding Provider Information</h3>
          <ul class="text-gray-500 text-sm leading-relaxed m-0 pl-5">
            <li><strong>Provider Name:</strong> Use the official name as it appears in documentation</li>
            <li><strong>Provider Type:</strong> Categories like Hospital, Clinic, Health System, Medical Center</li>
            <li><strong>File Name Prefix:</strong> Short identifier for file organization (e.g., "jhu" for Johns Hopkins)</li>
            <li><strong>Regions:</strong> Geographic areas served by this provider</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

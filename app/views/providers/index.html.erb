<% content_for :title, "Providers" %>

<div class="bg-gradient-page page-container">
  <div class="content-wrapper">

    <!-- Header Section -->
    <div class="section-spacing">
      <div class="flex-between-wrap mb-6">
        <div class="min-w-0 flex-1">
          <div class="flex items-center gap-4 mb-2">
            <div class="bg-gradient-green text-white p-3 rounded-xl flex-shrink-0">
              <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h1 class="text-4xl font-bold text-gray-800 m-0 min-w-0">Providers</h1>
          </div>
          <p class="text-gray-500 m-0 text-base">Manage healthcare providers and organizations</p>
        </div>

        <%= link_to new_provider_path, class: "bg-gradient-green text-white py-3.5 px-7 rounded-xl no-underline font-semibold text-sm inline-flex items-center gap-2 shadow-green transition-all hover:-translate-y-0.5", data: {turbo: false } do %>
          <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>Add New Provider</span>
        <% end %>
      </div>
    </div>

    <!-- Providers Table Card -->
    <div class="card-elevated overflow-hidden">
      <div class="table-container overflow-x-auto">
        <table class="w-full border-collapse">
          <thead>
            <tr class="table-header">
              <th class="table-cell text-left">Provider</th>
              <th class="table-cell text-left">Type</th>
              <th class="table-cell text-left">Prefix</th>
              <th class="table-cell text-left">Region</th>
              <th class="table-cell text-right">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @providers.any? %>
              <% @providers.each_with_index do |provider, index| %>
                <tr class="border-b border-gray-100 transition-all hover:bg-gray-50">
                  <td class="table-cell">
                    <div class="flex items-center gap-3">
                      <div class="w-10 h-10 bg-gradient-green rounded-lg flex items-center justify-center text-white font-semibold text-sm">
                        <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                      </div>
                      <div>
                        <div class="font-semibold text-gray-900 text-sm"><%= provider.name %></div>
                      </div>
                    </div>
                  </td>
                  <td class="table-cell">
                    <span class="bg-sky-50 text-sky-900 py-1 px-3 rounded-full text-xs font-medium">
                      <%= provider.provider_type %>
                    </span>
                  </td>
                  <td class="table-cell">
                    <% if provider.file_name_prefix %>
                      <span class="bg-sky-50 text-sky-900 py-1 px-3 rounded-full text-xs font-medium">
                        <%= provider.file_name_prefix %>
                      </span>
                    <% end %>
                  </td>
                  <td class="table-cell">
                    <% provider.regions.each do |region| %>
                      <span class="bg-sky-50 text-sky-900 py-1 px-3 rounded-full text-xs font-medium">
                        <%= region.name %>
                      </span>
                    <% end %>
                  </td>
                  <td class="actions-col table-cell text-right">
                    <div class="flex gap-2 justify-end">
                      <%= link_to provider, class: "btn-view" do %>
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        <span>View</span>
                      <% end %>
                      <%= link_to edit_provider_path(provider), class: "btn-edit" do %>
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        <span>Edit</span>
                      <% end %>
                      <%= button_to provider, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this provider? This action cannot be undone." }, class: "bg-red-600 text-white py-2 px-3 rounded-md no-underline text-xs font-semibold inline-flex items-center gap-1.5 transition-all hover:bg-red-700" do %>
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        <span>Delete</span>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="3" class="empty-state">
                  <div class="text-gray-400">
                    <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    <p class="text-base font-medium text-gray-500 m-0">No providers configured yet</p>
                    <p class="text-sm text-gray-400 mt-2 m-0">Get started by adding your first healthcare provider.</p>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

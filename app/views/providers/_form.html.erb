<%= form_with(model: provider, local: true) do |form| %>
  <div class="space-y-6">
    <%= render "shared/errors", errors: provider.errors.full_messages, resource_name: provider.class.name %>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

      <!-- Provider Name -->
      <div>
        <%= form.label :name, class: "input-label" do %>
          Provider Name
          <span class="text-red-500">*</span>
        <% end %>
        <%= form.text_field :name,
            placeholder: "Enter provider name (e.g., Johns Hopkins, Mayo Clinic)",
            autofocus: true,
            class: "input-field bg-gray-50" %>
        <p class="help-text">The official name of the healthcare provider or organization.</p>
      </div>

      <!-- Provider Type -->
      <div>
        <%= form.label :provider_type, class: "input-label" do %>
          Provider Type
          <span class="text-red-500">*</span>
        <% end %>
        <%= form.text_field :provider_type,
            placeholder: "e.g., Hospital, Clinic, Health System",
            class: "input-field bg-gray-50" %>
        <p class="help-text">The type or category of healthcare provider.</p>
      </div>

      <!-- Regions -->
      <div>
        <%= form.label :region, class: "input-label" do %>
          Associated Regions
        <% end %>
        <%= form.collection_select :region_ids, Region.order(:name), :id, :name,
            { include_hidden: false },
            multiple: true,
            class: "input-field bg-gray-50 min-h-[120px]" %>
        <p class="help-text">Select one or more regions this provider serves. Hold Ctrl/Cmd to select multiple.</p>
      </div>
    </div>

    <div class="flex justify-between items-center pt-8 border-t border-gray-100 mt-8">
      <div class="flex gap-4">
        <%= form.submit (provider.persisted? ? "Update Provider" : "Create Provider"),
            class: "bg-gradient-green text-white font-semibold py-3 px-8 rounded-lg border-0 cursor-pointer text-sm shadow-green transition-all hover:-translate-y-0.5" %>
        <%= link_to "Cancel", providers_path,
            class: "bg-gray-100 text-gray-500 font-semibold py-3 px-8 rounded-lg no-underline text-sm transition-all hover:bg-gray-200" %>
      </div>

      <% if provider.persisted? %>
        <div class="text-gray-500 text-xs">
          Last updated: <%= provider.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

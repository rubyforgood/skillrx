<% content_for :title, @tag.name %>

<div style="min-height: 100vh; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); padding: 2rem 0;">
  <div style="max-width: 800px; margin: 0 auto; padding: 0 1rem;">

    <!-- Header Section -->
    <div style="margin-bottom: 2rem;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
        <div style="min-width: 0; flex: 1;">
          <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
            <div style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); color: white; padding: 0.75rem; border-radius: 0.75rem; flex-shrink: 0;">
              <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
            </div>
            <h1 style="font-size: 2.5rem; font-weight: 700; color: #1f2937; margin: 0; min-width: 0;"><%= @tag.name %></h1>
          </div>
          <p style="color: #6b7280; margin: 0; font-size: 1rem;">Tag details and usage information</p>
        </div>

        <div style="display: flex; gap: 0.75rem; flex-wrap: wrap;">
          <%= link_to edit_tag_path(@tag), style: "background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); color: white; padding: 0.875rem 1.75rem; border-radius: 0.75rem; text-decoration: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.4), 0 4px 6px -2px rgba(59, 130, 246, 0.05); transition: all 0.2s;", data: {turbo: false } do %>
            <svg style="width: 1.125rem; height: 1.125rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <span>Edit Tag</span>
          <% end %>
        </div>
      </div>

      <!-- Breadcrumb -->
      <nav style="font-size: 0.875rem; color: #6b7280;">
        <ol style="display: flex; gap: 0.5rem; list-style: none; padding: 0; margin: 0;">
          <li><%= link_to "Dashboard", root_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li><%= link_to "Tags", tags_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li style="color: #374151; font-weight: 500;"><%= @tag.name %></li>
        </ol>
      </nav>
    </div>

    <!-- Success Message -->
    <% if notice %>
      <div style="background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%); border: 1px solid #86efac; color: #166534; padding: 1rem 1.5rem; border-radius: 0.75rem; margin-bottom: 2rem; display: flex; align-items: center; gap: 0.75rem;">
        <svg style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span style="font-weight: 500;"><%= notice %></span>
      </div>
    <% end %>

    <!-- Tag Details Card -->
    <div style="background: white; border-radius: 1rem; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); overflow: hidden; margin-bottom: 2rem;">

      <!-- Card Header -->
      <div style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); padding: 2rem; color: white;">
        <div style="display: flex; align-items: center; gap: 1rem;">
          <div style="background: rgba(255, 255, 255, 0.2); padding: 0.75rem; border-radius: 0.75rem;">
            <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h2 style="font-size: 1.5rem; font-weight: 700; margin: 0;">Tag Information</h2>
            <p style="margin: 0.25rem 0 0 0; color: rgba(255, 255, 255, 0.8); font-size: 0.875rem;">
              Content classification and usage details
            </p>
          </div>
        </div>
      </div>

      <!-- Card Content -->
      <div style="padding: 2rem;">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">

          <!-- Tag Name -->
          <div style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); padding: 1.5rem; border-radius: 0.75rem; border: 1px solid #e2e8f0;">
            <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 1rem;">
              <div style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); color: white; padding: 0.5rem; border-radius: 0.5rem;">
                <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
              </div>
              <h3 style="font-size: 1.125rem; font-weight: 600; color: #374151; margin: 0;">Tag Name</h3>
            </div>
            <p style="font-size: 1.5rem; font-weight: 700; color: #1f2937; margin: 0;"><%= @tag.name %></p>
            <p style="font-size: 0.875rem; color: #6b7280; margin: 0.5rem 0 0 0;">Content classification tag</p>
          </div>

          <!-- Usage Count -->
          <div style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); padding: 1.5rem; border-radius: 0.75rem; border: 1px solid #e2e8f0;">
            <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 1rem;">
              <div style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white; padding: 0.5rem; border-radius: 0.5rem;">
                <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              </div>
              <h3 style="font-size: 1.125rem; font-weight: 600; color: #374151; margin: 0;">Usage Count</h3>
            </div>
            <p style="font-size: 1.5rem; font-weight: 700; color: #1f2937; margin: 0;"><%= @tag.taggings_count %></p>
            <p style="font-size: 0.875rem; color: #6b7280; margin: 0.5rem 0 0 0;"><%= pluralize(@tag.taggings_count, 'time') %> used in content</p>
          </div>

        </div>

        <!-- Cognates Section -->
        <% if @tag.cognates_tags.any? %>
          <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #e5e7eb;">
            <h3 style="font-size: 1.25rem; font-weight: 600; color: #374151; margin: 0 0 1rem 0;">Related Tags (Cognates)</h3>
            <div style="display: flex; gap: 0.75rem; flex-wrap: wrap;">
              <% @tag.cognates_tags.each do |cognate| %>
                <%= link_to cognate.name, tag_path(cognate), style: "display: inline-flex; align-items: center; padding: 0.5rem 1rem; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; border-radius: 9999px; font-size: 0.875rem; font-weight: 500; text-decoration: none; transition: all 0.2s;", data: { turbo: false } %>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Tag Statistics -->
        <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #e5e7eb;">
          <h3 style="font-size: 1.25rem; font-weight: 600; color: #374151; margin: 0 0 1rem 0;">Tag Statistics</h3>
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">

            <div style="text-align: center; padding: 1rem; background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border-radius: 0.5rem; border: 1px solid #f59e0b;">
              <div style="font-size: 1.5rem; font-weight: 700; color: #92400e;"><%= @tag.taggings_count %></div>
              <div style="font-size: 0.875rem; color: #78350f; font-weight: 500;">Total Usages</div>
            </div>

            <div style="text-align: center; padding: 1rem; background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%); border-radius: 0.5rem; border: 1px solid #3b82f6;">
              <div style="font-size: 1.5rem; font-weight: 700; color: #1e40af;"><%= @tag.cognates_tags.count %></div>
              <div style="font-size: 0.875rem; color: #1e3a8a; font-weight: 500;">Related Tags</div>
            </div>

          </div>
        </div>
      </div>
    </div>

    <!-- Taggings Section -->
    <div>
      <%= render "taggings" %>
    </div>

    <!-- Action Buttons -->
    <div style="display: flex; gap: 1rem; justify-content: space-between; align-items: center; flex-wrap: wrap; margin-top: 2rem;">
      <%= link_to tags_path, style: "background: #6b7280; color: white; padding: 0.875rem 1.75rem; border-radius: 0.75rem; text-decoration: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.2s;" do %>
        <svg style="width: 1.125rem; height: 1.125rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span>Back to Tags</span>
      <% end %>

      <div style="display: flex; gap: 0.75rem; align-items: center;">
        <%= link_to edit_tag_path(@tag), style: "background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); color: white; padding: 0.875rem 1.75rem; border-radius: 0.75rem; text-decoration: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.2s;", data: { turbo: false } do %>
          <svg style="width: 1.125rem; height: 1.125rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          <span>Edit</span>
        <% end %>

        <div id="<%= "delete_tag_#{@tag.id}" %>" style="display: inline-flex;">
          <%= button_to @tag, method: :delete, class: "delete-tag-button" do %>
            <svg style="width: 1.125rem; height: 1.125rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span>Delete this tag</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Button hover effects */
  a:hover, button:hover {
    transform: translateY(-2px);
  }

  a[style*="background: #6b7280"]:hover {
    background: #4b5563 !important;
  }

  a[style*="background: linear-gradient(135deg, #3b82f6"]:hover {
    box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.4), 0 10px 10px -5px rgba(59, 130, 246, 0.1) !important;
  }

  .delete-tag-button {
    background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
    color: white;
    padding: 0.875rem 1.75rem;
    border-radius: 0.75rem;
    border: none;
    font-weight: 600;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .delete-tag-button:hover {
    box-shadow: 0 20px 25px -5px rgba(220, 38, 38, 0.4), 0 10px 10px -5px rgba(220, 38, 38, 0.1) !important;
  }

  .cancel-delete-link {
    background: #f3f4f6;
    color: #374151;
    padding: 0.875rem 1.75rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .cancel-delete-link:hover {
    background: #e5e7eb;
    color: #111827;
  }

  /* Cognate link hover effects */
  a[style*="background: linear-gradient(135deg, #10b981"]:hover {
    transform: scale(1.05);
  }

  /* Responsive design */
  @media (max-width: 768px) {
    div[style*="max-width: 800px"] {
      padding: 0 0.5rem !important;
    }

    div[style*="min-height: 100vh"] {
      padding: 1rem 0 !important;
    }

    div[style*="justify-content: space-between"] {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 1rem !important;
    }

    h1 {
      font-size: 2rem !important;
    }

    div[style*="grid-template-columns: repeat(auto-fit, minmax(300px, 1fr))"] {
      grid-template-columns: 1fr !important;
    }

    div[style*="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr))"] {
      grid-template-columns: repeat(2, 1fr) !important;
    }
  }

  @media (max-width: 640px) {
    div[style*="padding: 0 1rem"] {
      padding: 0 0.5rem !important;
    }

    div[style*="padding: 2rem"] {
      padding: 1rem !important;
    }

    h1 {
      font-size: 1.75rem !important;
    }

    div[style*="grid-template-columns: repeat(2, 1fr)"] {
      grid-template-columns: 1fr !important;
    }
  }
</style>

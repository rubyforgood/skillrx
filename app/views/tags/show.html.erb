<% content_for :title, @tag.name %>

<div class="bg-gradient-page page-container">
  <div class="form-container">

    <!-- Header Section -->
    <div class="section-spacing">
      <div class="flex justify-between items-center mb-6 flex-wrap gap-4">
        <div class="min-w-0 flex-1">
          <div class="flex-center mb-2">
            <div class="bg-gradient-purple icon-wrapper text-white">
              <svg class="icon-size-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
            </div>
            <h1 class="text-4xl font-bold text-gray-800 m-0 min-w-0"><%= @tag.name %></h1>
          </div>
          <p class="page-subtitle">Tag details and usage information</p>
        </div>

        <div class="flex gap-3 flex-wrap">
          <%= link_to edit_tag_path(@tag), class: "bg-gradient-blue text-white py-3.5 px-7 rounded-xl no-underline font-semibold text-sm inline-flex items-center gap-2 shadow-blue transition-all hover:-translate-y-0.5", data: {turbo: false } do %>
            <svg class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <span>Edit Tag</span>
          <% end %>
        </div>
      </div>

      <!-- Breadcrumb -->
      <nav class="breadcrumb-nav">
        <ol class="breadcrumb-list">
          <li><%= link_to "Dashboard", root_path, class: "text-gray-500 no-underline hover:text-gray-700" %></li>
          <li class="breadcrumb-separator">/</li>
          <li><%= link_to "Tags", tags_path, class: "text-gray-500 no-underline hover:text-gray-700" %></li>
          <li class="breadcrumb-separator">/</li>
          <li class="breadcrumb-current"><%= @tag.name %></li>
        </ol>
      </nav>
    </div>

    <!-- Success Message -->
    <% if notice %>
      <div class="alert-success flex items-center gap-3">
        <svg class="icon-size-md flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="font-medium"><%= notice %></span>
      </div>
    <% end %>

    <!-- Tag Details Card -->
    <div class="card-elevated overflow-hidden mb-8">

      <!-- Card Header -->
      <div class="bg-gradient-purple p-8 text-white">
        <div class="flex-center">
          <div class="icon-wrapper-translucent">
            <svg class="icon-size-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold m-0">Tag Information</h2>
            <p class="mt-1 m-0 text-white/80 text-sm">
              Content classification and usage details
            </p>
          </div>
        </div>
      </div>

      <!-- Card Content -->
      <div class="card-body">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

          <!-- Tag Name -->
          <div class="bg-gradient-gray p-6 rounded-xl border border-gray-200">
            <div class="flex items-center gap-3 mb-4">
              <div class="bg-gradient-purple icon-wrapper-sm text-white">
                <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-700 m-0">Tag Name</h3>
            </div>
            <p class="text-2xl font-bold text-gray-900 m-0"><%= @tag.name %></p>
            <p class="text-sm text-gray-500 mt-2 m-0">Content classification tag</p>
          </div>

          <!-- Usage Count -->
          <div class="bg-gradient-gray p-6 rounded-xl border border-gray-200">
            <div class="flex items-center gap-3 mb-4">
              <div class="bg-gradient-amber icon-wrapper-sm text-white">
                <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-700 m-0">Usage Count</h3>
            </div>
            <p class="text-2xl font-bold text-gray-900 m-0"><%= @tag.taggings_count %></p>
            <p class="text-sm text-gray-500 mt-2 m-0"><%= pluralize(@tag.taggings_count, 'time') %> used in content</p>
          </div>

        </div>

        <!-- Cognates Section -->
        <% if @tag.cognates_tags.any? %>
          <div class="mt-8 pt-8 border-t border-gray-200">
            <h3 class="text-xl font-semibold text-gray-700 m-0 mb-4">Related Tags (Cognates)</h3>
            <div class="flex gap-3 flex-wrap">
              <% @tag.cognates_tags.each do |cognate| %>
                <%= link_to cognate.name, tag_path(cognate), class: "bg-gradient-green inline-flex items-center py-2 px-4 text-white rounded-full text-sm font-medium no-underline transition-all hover:scale-105", data: { turbo: false } %>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Tag Statistics -->
        <div class="mt-8 pt-8 border-t border-gray-200">
          <h3 class="text-xl font-semibold text-gray-700 m-0 mb-4">Tag Statistics</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">

            <div class="text-center p-4 bg-gradient-amber rounded-lg border border-amber-500">
              <div class="text-2xl font-bold text-amber-900"><%= @tag.taggings_count %></div>
              <div class="text-sm text-amber-800 font-medium">Total Usages</div>
            </div>

            <div class="text-center p-4 bg-gradient-to-br from-blue-100 to-blue-200 rounded-lg border border-blue-500">
              <div class="text-2xl font-bold text-blue-900"><%= @tag.cognates_tags.count %></div>
              <div class="text-sm text-blue-800 font-medium">Related Tags</div>
            </div>

          </div>
        </div>
      </div>
    </div>

    <!-- Taggings Section -->
    <div>
      <%= render "taggings" %>
    </div>

    <!-- Action Buttons -->
    <div class="flex gap-4 justify-between items-center flex-wrap mt-8">
      <%= link_to tags_path, class: "bg-gray-500 text-white py-3.5 px-7 rounded-xl no-underline font-semibold text-sm inline-flex items-center gap-2 transition-all hover:bg-gray-600 hover:-translate-y-0.5" do %>
        <svg class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span>Back to Tags</span>
      <% end %>

      <div class="flex gap-3 items-center">
        <%= link_to edit_tag_path(@tag), class: "bg-gradient-blue text-white py-3.5 px-7 rounded-xl no-underline font-semibold text-sm inline-flex items-center gap-2 transition-all shadow-blue hover:-translate-y-0.5", data: { turbo: false } do %>
          <svg class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          <span>Edit</span>
        <% end %>

        <div id="<%= "delete_tag_#{@tag.id}" %>" class="inline-flex">
          <%= button_to @tag, method: :delete, class: "bg-gradient-red text-white py-3.5 px-7 rounded-xl border-0 font-semibold text-sm inline-flex items-center gap-2 cursor-pointer transition-all hover:-translate-y-0.5" do %>
            <svg class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span>Delete this tag</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

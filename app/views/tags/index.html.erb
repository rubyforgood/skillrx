<% content_for :title, "Tags" %>

<div class="bg-gradient-page page-container">
  <div class="content-wrapper">

    <!-- Header Section -->
    <div class="section-spacing">
      <div class="flex-between-wrap mb-6">
        <div class="min-w-0 flex-1">
          <div class="flex-center mb-2">
            <div class="bg-gradient-purple icon-wrapper text-white">
              <svg class="icon-size-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
            </div>
            <h1 class="page-title">Tags</h1>
          </div>
          <p class="page-subtitle">Manage content tags and classification systems</p>
        </div>
      </div>

      <!-- Breadcrumb -->
      <nav class="breadcrumb-nav">
        <ol class="breadcrumb-list">
          <li><%= link_to "Dashboard", root_path, class: "text-gray-500 no-underline hover:text-gray-700" %></li>
          <li class="breadcrumb-separator">/</li>
          <li class="breadcrumb-current">Tags</li>
        </ol>
      </nav>
    </div>

    <!-- Search Card -->
    <div class="card-elevated overflow-hidden mb-8">
      <div class="bg-gradient-gray p-6 border-b border-gray-200">
        <div class="flex-center-sm mb-4">
          <div class="bg-gradient-purple text-white p-2 rounded-lg">
            <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-700 m-0">Search & Filter Tags</h3>
        </div>

        <%= form_for :search, url: tags_path, method: :get, data: { controller: "search", search_target: "search", turbo_frame: "tag-list", turbo_action: "advance" } do |f| %>
          <div class="form-grid-auto">

            <!-- Name Search -->
            <div>
              <%= f.label :name, class: "input-label" do %>
                <div class="label-with-icon">
                  <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                  </svg>
                  Tag Name
                </div>
              <% end %>
              <%= f.text_field :name,
                  value: params.dig(:search, :name),
                  placeholder: "Search by tag name...",
                  class: "input-field",
                  data: { action: "input->search#submit" } %>
            </div>

            <!-- Order Selection -->
            <div>
              <%= f.label :order, class: "input-label" do %>
                <div class="label-with-icon">
                  <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2 2v0"/>
                  </svg>
                  Order By
                </div>
              <% end %>
              <div class="relative">
                <%= f.select :order,
                    options_for_select([
                      ["Name", :name],
                      ["Most recently added", :desc],
                      ["Least recently added", :asc],
                      ["Highest number of taggings", :most_tagged],
                      ["Lowest number of taggings", :least_tagged]
                    ], params.dig(:search, :order)),
                    {},
                    class: "select-field",
                    data: { action: "change->search#submit" } %>
                <%= render "shared/dropdown_arrow" %>
              </div>
            </div>

          </div>

          <!-- Clear Button -->
          <div class="mt-6 flex justify-end">
            <%= link_to tags_path, class: "bg-gray-500 text-white py-3 px-6 rounded-lg no-underline font-semibold text-sm inline-flex items-center gap-2 transition-all hover:bg-gray-600 hover:-translate-y-0.5" do %>
              <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <span>Clear Filters</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Tags Table Card -->
    <%= turbo_frame_tag "tag-list" do %>
      <div class="card-elevated overflow-hidden">

        <!-- Card Header -->
        <div class="bg-gradient-purple p-8 text-white">
          <div class="flex-between-wrap">
            <div class="flex-center">
              <div class="icon-wrapper-translucent">
                <svg class="icon-size-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
              </div>
              <div>
                <h2 class="text-2xl font-bold m-0">Content Tags</h2>
                <p class="mt-1 m-0 text-white/80 text-sm">
                  <%= pluralize(@tags.count, 'tag') %> found
                </p>
              </div>
            </div>

            <div class="flex gap-3 items-center">
              <div class="bg-white/10 py-2 px-4 rounded-full text-xs font-medium">
                Total: <%= @tags.count %>
              </div>
            </div>
          </div>
        </div>

        <!-- Table Content -->
        <div class="p-0">
          <div class="table-container overflow-x-auto">
            <table class="w-full border-collapse">
              <thead>
                <tr class="bg-gradient-gray border-b-2 border-gray-200">
                  <th class="table-header">
                    <div class="flex-center-sm">
                      <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                      </svg>
                      Tag Name
                    </div>
                  </th>
                  <th class="table-header hide-mobile">
                    <div class="flex-center-sm">
                      <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                      </svg>
                      Cognates
                    </div>
                  </th>
                  <th class="table-header">
                    <div class="flex-center-sm">
                      <svg class="icon-size" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                      </svg>
                      Usage
                    </div>
                  </th>
                  <th class="table-header text-right">Actions</th>
                </tr>
              </thead>
              <%= render "list", topics: @tags %>
            </table>
          </div>

          <!-- Pagination -->
          <div class="pagination-footer">
            <div class="text-gray-500 text-sm">
              Showing <%= @tags.count %> of <%= @pagy.count %> tags
            </div>
            <div>
              <%= render "shared/pagination", pagy: @pagy %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

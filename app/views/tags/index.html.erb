<% content_for :title, "Tags" %>

<div class="bg-gradient-page" style="min-height: 100vh; padding: 2rem 0;">
  <div style="max-width: 1200px; margin: 0 auto; padding: 0 1rem; overflow-x: hidden;">

    <!-- Header Section -->
    <div style="margin-bottom: 2rem;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
        <div style="min-width: 0; flex: 1;">
          <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
            <div style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); color: white; padding: 0.75rem; border-radius: 0.75rem; flex-shrink: 0;">
              <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
            </div>
            <h1 style="font-size: 2.5rem; font-weight: 700; color: #1f2937; margin: 0; min-width: 0;">Tags</h1>
          </div>
          <p style="color: #6b7280; margin: 0; font-size: 1rem;">Manage content tags and classification systems</p>
        </div>
      </div>

      <!-- Breadcrumb -->
      <nav style="font-size: 0.875rem; color: #6b7280;">
        <ol style="display: flex; gap: 0.5rem; list-style: none; padding: 0; margin: 0;">
          <li><%= link_to "Dashboard", root_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li style="color: #374151; font-weight: 500;">Tags</li>
        </ol>
      </nav>
    </div>

    <!-- Search Card -->
    <div style="background: white; border-radius: 1rem; box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); overflow: hidden; margin-bottom: 2rem;">
      <div class="bg-gradient-gray" style="padding: 1.5rem; border-bottom: 1px solid #e2e8f0;">
        <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 1rem;">
          <div style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); color: white; padding: 0.5rem; border-radius: 0.5rem;">
            <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <h3 style="font-size: 1.125rem; font-weight: 600; color: #374151; margin: 0;">Search & Filter Tags</h3>
        </div>

        <%= form_for :search, url: tags_path, method: :get, data: { controller: "search", search_target: "search", turbo_frame: "tag-list", turbo_action: "advance" } do |f| %>
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">

            <!-- Name Search -->
            <div>
              <%= f.label :name, class: "input-label" do %>
                <div style="display: flex; align-items: center; gap: 0.5rem;">
                  <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                  </svg>
                  Tag Name
                </div>
              <% end %>
              <%= f.text_field :name,
                  value: params.dig(:search, :name),
                  placeholder: "Search by tag name...",
                  class: "input-field",
                  data: { action: "input->search#submit" } %>
            </div>

            <!-- Order Selection -->
            <div>
              <%= f.label :order, class: "input-label" do %>
                <div style="display: flex; align-items: center; gap: 0.5rem;">
                  <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2 2v0"/>
                  </svg>
                  Order By
                </div>
              <% end %>
              <div style="position:relative;">
                <%= f.select :order,
                    options_for_select([
                      ["Name", :name],
                      ["Most recently added", :desc],
                      ["Least recently added", :asc],
                      ["Highest number of taggings", :most_tagged],
                      ["Lowest number of taggings", :least_tagged]
                    ], params.dig(:search, :order)),
                    {},
                    class: "select-field",
                    data: { action: "change->search#submit" } %>
                <%= render "shared/dropdown_arrow" %>
              </div>
            </div>

          </div>

          <!-- Clear Button -->
          <div style="margin-top: 1.5rem; display: flex; justify-content: flex-end;">
            <%= link_to tags_path, style: "background: #6b7280; color: white; padding: 0.75rem 1.5rem; border-radius: 0.5rem; text-decoration: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.2s;" do %>
              <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <span>Clear Filters</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Tags Table Card -->
    <%= turbo_frame_tag "tag-list" do %>
      <div style="background: white; border-radius: 1rem; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); overflow: hidden;">

        <!-- Card Header -->
        <div class="bg-gradient-purple" style="padding: 2rem; color: white;">
          <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
            <div style="display: flex; align-items: center; gap: 1rem;">
              <div style="background: rgba(255, 255, 255, 0.2); padding: 0.75rem; border-radius: 0.75rem;">
                <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
              </div>
              <div>
                <h2 style="font-size: 1.5rem; font-weight: 700; margin: 0;">Content Tags</h2>
                <p style="margin: 0.25rem 0 0 0; color: rgba(255, 255, 255, 0.8); font-size: 0.875rem;">
                  <%= pluralize(@tags.count, 'tag') %> found
                </p>
              </div>
            </div>

            <div style="display: flex; gap: 0.75rem; align-items: center;">
              <div style="background: rgba(255, 255, 255, 0.1); padding: 0.5rem 1rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500;">
                Total: <%= @tags.count %>
              </div>
            </div>
          </div>
        </div>

        <!-- Table Content -->
        <div style="padding: 0;">
          <div class="table-container" style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse;">
              <thead>
                <tr class="bg-gradient-gray" style="border-bottom: 2px solid #e2e8f0;">
                  <th style="padding: 1.25rem 1.5rem; text-align: left; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                      <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                      </svg>
                      Tag Name
                    </div>
                  </th>
                  <th class="hide-mobile" style="padding: 1.25rem 1.5rem; text-align: left; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                      <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                      </svg>
                      Cognates
                    </div>
                  </th>
                  <th style="padding: 1.25rem 1.5rem; text-align: left; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                      <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                      </svg>
                      Usage
                    </div>
                  </th>
                  <th style="padding: 1.25rem 1.5rem; text-align: right; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">Actions</th>
                </tr>
              </thead>
              <%= render "list", topics: @tags %>
            </table>
          </div>

          <!-- Pagination -->
          <div style="background: #f8fafc; padding: 1.5rem 2rem; border-top: 1px solid #e2e8f0; display: flex; justify-content: space-between; align-items: center;">
            <div style="color: #6b7280; font-size: 0.875rem;">
              Showing <%= @tags.count %> of <%= @pagy.count %> tags
            </div>
            <div>
              <%= render "shared/pagination", pagy: @pagy %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  /* Enhanced button hover effects */
  a[href*="new_tag"]:hover {
    transform: translateY(-3px);
    box-shadow: 0 20px 25px -5px rgba(139, 92, 246, 0.4), 0 10px 10px -5px rgba(139, 92, 246, 0.1) !important;
  }

  /* Search form hover effects */
  a[style*="background: #6b7280"]:hover {
    background: #4b5563 !important;
    transform: translateY(-1px);
  }

  /* Form input focus effects */
  form input[type="text"]:focus, form select:focus {
    outline: none;
  }

  /* Table hover effects */
  tbody tr:hover {
    background-color: #f8fafc !important;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    /* Container adjustments */
    div[style*="max-width: 1200px"] {
      padding: 0 0.5rem !important;
    }

    /* Page padding adjustments */
    div[style*="min-height: 100vh"] {
      padding: 1rem 0 !important;
    }

    /* Header adjustments */
    div[style*="justify-content: space-between"] {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 1rem !important;
    }

    /* Title adjustments */
    h1 {
      font-size: 2rem !important;
    }

    /* Hide less important columns on mobile */
    .hide-mobile {
      display: none !important;
    }

    /* Make remaining columns more compact */
    th, td {
      padding: 0.75rem 0.5rem !important;
      font-size: 0.875rem !important;
    }

    /* Card adjustments */
    div[style*="border-radius: 1rem"] {
      border-radius: 0.5rem !important;
      margin: 0 -0.5rem !important;
    }

    /* Card header adjustments */
    div[style*="background: linear-gradient(135deg, #8b5cf6"] {
      padding: 1.5rem 1rem !important;
    }

    /* Search grid adjustments */
    div[style*="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr))"] {
      grid-template-columns: 1fr !important;
    }

    /* Table container */
    .table-container {
      overflow-x: auto !important;
      -webkit-overflow-scrolling: touch !important;
    }
  }

  @media (max-width: 640px) {
    /* Further mobile adjustments */
    div[style*="padding: 0 1rem"] {
      padding: 0 0.25rem !important;
    }

    /* Extend cards to screen edge on very small screens */
    div[style*="border-radius: 1rem"] {
      border-radius: 0 !important;
      margin: 0 -0.25rem !important;
    }

    /* Reduce padding on cards */
    div[style*="padding: 2rem"] {
      padding: 1rem 0.75rem !important;
    }

    /* Smaller text on very small screens */
    h1 {
      font-size: 1.75rem !important;
    }

    /* Even more compact table */
    th, td {
      padding: 0.5rem 0.25rem !important;
      font-size: 0.75rem !important;
    }

    /* Ensure no horizontal overflow */
    * {
      max-width: 100% !important;
      box-sizing: border-box !important;
    }

    /* Force word wrapping */
    th, td {
      word-wrap: break-word !important;
      word-break: break-word !important;
    }
  }
</style>

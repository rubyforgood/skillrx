<% content_for :title, "Edit #{@tag.name}" %>

<div style="min-height: 100vh; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); padding: 2rem 0;">
  <div style="max-width: 800px; margin: 0 auto; padding: 0 1rem;">
    
    <!-- Header Section -->
    <div style="margin-bottom: 2rem;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
        <div style="min-width: 0; flex: 1;">
          <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
            <div style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white; padding: 0.75rem; border-radius: 0.75rem; flex-shrink: 0;">
              <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </div>
            <h1 style="font-size: 2.5rem; font-weight: 700; color: #1f2937; margin: 0; min-width: 0;">Edit Tag</h1>
          </div>
          <p style="color: #6b7280; margin: 0; font-size: 1rem;">Modify tag details and configuration</p>
        </div>
      </div>
      
      <!-- Breadcrumb -->
      <nav style="font-size: 0.875rem; color: #6b7280;">
        <ol style="display: flex; gap: 0.5rem; list-style: none; padding: 0; margin: 0;">
          <li><%= link_to "Dashboard", root_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li><%= link_to "Tags", tags_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li><%= link_to @tag.name, @tag, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li style="color: #374151; font-weight: 500;">Edit</li>
        </ol>
      </nav>
    </div>

    <!-- Form Card -->
    <div style="background: white; border-radius: 1rem; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); overflow: hidden;">
      
      <!-- Card Header -->
      <div style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); padding: 2rem; color: white;">
        <div style="display: flex; align-items: center; gap: 1rem;">
          <div style="background: rgba(255, 255, 255, 0.2); padding: 0.75rem; border-radius: 0.75rem;">
            <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
          </div>
          <div>
            <h2 style="font-size: 1.5rem; font-weight: 700; margin: 0;">Edit <%= @tag.name %></h2>
            <p style="margin: 0.25rem 0 0 0; color: rgba(255, 255, 255, 0.8); font-size: 0.875rem;">
              Update tag information and settings
            </p>
          </div>
        </div>
      </div>
      
      <!-- Form Content -->
      <div style="padding: 2rem;">
        <%= render "form", tag: @tag %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div style="margin-top: 2rem; display: flex; gap: 1rem; justify-content: space-between; align-items: center; flex-wrap: wrap;">
      <%= link_to tags_path, style: "background: #6b7280; color: white; padding: 0.875rem 1.75rem; border-radius: 0.75rem; text-decoration: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.2s;" do %>
        <svg style="width: 1.125rem; height: 1.125rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span>Back to Tags</span>
      <% end %>
      
      <%= link_to @tag, style: "background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); color: white; padding: 0.875rem 1.75rem; border-radius: 0.75rem; text-decoration: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.2s;" do %>
        <svg style="width: 1.125rem; height: 1.125rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
        <span>View Tag</span>
      <% end %>
    </div>
  </div>
</div>

<style>
  /* Button hover effects */
  a:hover {
    transform: translateY(-2px);
  }
  
  a[style*="background: #6b7280"]:hover {
    background: #4b5563 !important;
  }
  
  a[style*="background: linear-gradient(135deg, #8b5cf6"]:hover {
    box-shadow: 0 20px 25px -5px rgba(139, 92, 246, 0.4), 0 10px 10px -5px rgba(139, 92, 246, 0.1) !important;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    div[style*="max-width: 800px"] {
      padding: 0 0.5rem !important;
    }
    
    div[style*="min-height: 100vh"] {
      padding: 1rem 0 !important;
    }
    
    div[style*="justify-content: space-between"] {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 1rem !important;
    }
    
    h1 {
      font-size: 2rem !important;
    }
    
    div[style*="padding: 2rem"] {
      padding: 1.5rem !important;
    }
  }
  
  @media (max-width: 640px) {
    div[style*="padding: 0 1rem"] {
      padding: 0 0.5rem !important;
    }
    
    div[style*="padding: 2rem"] {
      padding: 1rem !important;
    }
    
    h1 {
      font-size: 1.75rem !important;
    }
  }
</style>

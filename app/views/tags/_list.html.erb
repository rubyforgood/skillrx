<tbody>
  <% @tags.each do |tag| %>
    <tr>
      <td class="text-bold-500">
        <%= tag.name %>
      </td>
      <td class="text-bold-500">
        <% tag.cognates.each do |cognate| %>
          <%= link_to cognate.name, tag_path(cognate), class: "badge bg-light-primary" %>
        <% end %>
        <% tag.reverse_cognates.each do |cognate| %>
          <%= link_to cognate.name, tag_path(cognate), class: "badge bg-light-primary" %>
        <% end %>
      </td>
      <td class="text-end">
        <%= link_to tag, class: "btn btn-primary btn-sm", data: {turbo: false } do %>
          <i class="bi bi-search"></i> View
        <% end %>
        <%= link_to edit_tag_path(tag), class: "btn btn-secondary btn-sm", data: {turbo: false } do %>
          <i class="bi bi-pencil"></i> Edit
        <% end %>
      </td>
    </tr>
  <% end %>
</tbody>

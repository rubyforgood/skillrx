<% content_for :title, @beacon.name %>

<div class="bg-gradient-page page-container">
  <div class="content-wrapper">

    <!-- Header Section -->
    <div class="section-spacing">
      <div class="flex justify-between items-center mb-6 flex-wrap gap-4">
        <div class="min-w-0 flex-1">
          <div class="flex-center mb-2">
            <div class="bg-gradient-green icon-wrapper text-white">
              <svg class="icon-size-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
              </svg>
            </div>
            <h1 class="text-4xl font-bold text-gray-800 m-0 min-w-0"><%= @beacon.name %></h1>
          </div>
          <p class="page-subtitle"><%= @beacon.region.name %> Region</p>
        </div>

        <div class="flex gap-3 flex-wrap">
          <%= link_to edit_beacon_path(@beacon), class: "bg-gradient-blue text-white py-3.5 px-7 rounded-xl no-underline font-semibold text-sm inline-flex items-center gap-2 shadow-blue transition-all hover:-translate-y-0.5", data: {turbo: false } do %>
            <svg class="w-4.5 h-4.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <span>Edit Beacon</span>
          <% end %>
        </div>
      </div>

      <!-- Breadcrumb -->
      <nav class="breadcrumb-nav">
        <ol class="breadcrumb-list">
          <li><%= link_to "Dashboard", root_path, class: "text-gray-500 no-underline hover:text-gray-700" %></li>
          <li class="breadcrumb-separator">/</li>
          <li><%= link_to "Beacons", beacons_path, class: "text-gray-500 no-underline hover:text-gray-700" %></li>
          <li class="breadcrumb-separator">/</li>
          <li class="breadcrumb-current"><%= @beacon.name %></li>
        </ol>
      </nav>
    </div>

    <!-- Status Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <div class="card-elevated p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 m-0">Status</p>
            <p class="text-2xl font-bold m-0 mt-2 <%= @beacon.revoked? ? 'text-red-600' : 'text-green-600' %>">
              <%= @beacon.revoked? ? 'Revoked' : 'Active' %>
            </p>
          </div>
          <div class="w-12 h-12 <%= @beacon.revoked? ? 'bg-red-100' : 'bg-green-100' %> rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 <%= @beacon.revoked? ? 'text-red-600' : 'text-green-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <% if @beacon.revoked? %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              <% else %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              <% end %>
            </svg>
          </div>
        </div>
      </div>

      <div class="card-elevated p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 m-0">Providers</p>
            <p class="text-2xl font-bold text-gray-800 m-0 mt-2"><%= @beacon.providers.count %></p>
          </div>
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="card-elevated p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 m-0">Topics</p>
            <p class="text-2xl font-bold text-gray-800 m-0 mt-2"><%= @beacon.topics.count %></p>
          </div>
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      
      <!-- Beacon Details Card -->
      <div class="card-elevated">
        <div class="bg-gradient-to-br from-green-700 to-emerald-800 p-6 text-white rounded-t-xl">
          <h2 class="text-xl font-bold m-0 flex items-center gap-2">
            <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Beacon Details
          </h2>
        </div>
        <div class="p-6">
          <dl class="space-y-4">
            <div class="flex justify-between py-3 border-b border-gray-100">
              <dt class="text-sm font-medium text-gray-500">ID</dt>
              <dd class="text-sm text-gray-900 font-mono"><%= @beacon.id %></dd>
            </div>
            <div class="flex justify-between py-3 border-b border-gray-100">
              <dt class="text-sm font-medium text-gray-500">API Key Prefix</dt>
              <dd class="text-sm text-gray-900 font-mono"><%= @beacon.api_key_prefix %>***</dd>
            </div>
            <div class="flex justify-between py-3 border-b border-gray-100">
              <dt class="text-sm font-medium text-gray-500">Created</dt>
              <dd class="text-sm text-gray-900"><%= @beacon.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
            </div>
            <div class="flex justify-between py-3">
              <dt class="text-sm font-medium text-gray-500">Updated</dt>
              <dd class="text-sm text-gray-900"><%= @beacon.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- API Key Card -->
      <div class="card-elevated">
        <div class="bg-gradient-to-br from-purple-700 to-indigo-800 p-6 text-white rounded-t-xl">
          <h2 class="text-xl font-bold m-0 flex items-center gap-2">
            <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
            </svg>
            API Key
          </h2>
        </div>
        <div class="p-6">
          <% if @api_key_display %>
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200 mb-4">
              <div class="flex items-center justify-between mb-2">
                <span class="text-xs font-semibold text-gray-500 uppercase">API Key (save this now - it won't be shown again)</span>
                <button onclick="copyApiKey()" class="text-xs text-blue-600 hover:text-blue-800 font-semibold">
                  Copy to Clipboard
                </button>
              </div>
              <code id="beacon-api-key" class="text-sm text-gray-900 font-mono break-all block"><%= @api_key_display %></code>
            </div>
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-yellow-800 m-0 mb-1">Important - Save This Key</h3>
                  <p class="text-sm text-yellow-700 m-0">
                    This API key will only be shown once. Make sure to copy and save it securely. You can regenerate a new key if needed.
                  </p>
                </div>
              </div>
            </div>
          <% else %>
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200 mb-4">
              <div class="flex items-center justify-between mb-2">
                <span class="text-xs font-semibold text-gray-500 uppercase">API Key Prefix</span>
              </div>
              <code class="text-sm text-gray-900 font-mono break-all block"><%= @beacon.api_key_prefix %>***</code>
            </div>
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-blue-800 m-0 mb-1">API Key Hidden</h3>
                  <p class="text-sm text-blue-700 m-0">
                    The full API key is hidden for security. Only the prefix is shown. If you need a new key, you can regenerate it.
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Document Filters Card -->
    <div class="card-elevated mt-6">
      <div class="bg-gradient-to-br from-blue-700 to-indigo-800 p-6 text-white rounded-t-xl">
        <h2 class="text-xl font-bold m-0 flex items-center gap-2">
          <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
          </svg>
          Document Access Configuration
        </h2>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-sm font-semibold text-gray-700 mb-3">Basic Configuration</h3>
            <dl class="space-y-3">
              <div class="flex justify-between py-2 border-b border-gray-100">
                <dt class="text-sm font-medium text-gray-500">Language</dt>
                <dd class="text-sm text-gray-900">
                  <span class="bg-blue-50 text-blue-900 py-1 px-3 rounded-full text-xs font-medium">
                    <%= @beacon.language.name %>
                  </span>
                </dd>
              </div>
              <div class="flex justify-between py-2">
                <dt class="text-sm font-medium text-gray-500">Region</dt>
                <dd class="text-sm text-gray-900">
                  <span class="bg-purple-50 text-purple-900 py-1 px-3 rounded-full text-xs font-medium">
                    <%= @beacon.region.name %>
                  </span>
                </dd>
              </div>
            </dl>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-gray-700 mb-3">Access Filters</h3>
            <dl class="space-y-3">
              <div class="py-2 border-b border-gray-100">
                <dt class="text-sm font-medium text-gray-500 mb-2">Providers</dt>
                <dd class="text-sm text-gray-900">
                  <% if @beacon.providers.any? %>
                    <div class="flex flex-wrap gap-2">
                      <% @beacon.providers.each do |provider| %>
                        <span class="bg-green-50 text-green-900 py-1 px-3 rounded-full text-xs font-medium">
                          <%= provider.name %>
                        </span>
                      <% end %>
                    </div>
                  <% else %>
                    <span class="text-gray-400">All Providers</span>
                  <% end %>
                </dd>
              </div>
              <div class="py-2">
                <dt class="text-sm font-medium text-gray-500 mb-2">Topics</dt>
                <dd class="text-sm text-gray-900">
                  <% if @beacon.topics.any? %>
                    <div class="flex flex-wrap gap-2">
                      <% @beacon.topics.each do |topic| %>
                        <span class="bg-orange-50 text-orange-900 py-1 px-3 rounded-full text-xs font-medium">
                          <%= topic.title %>
                        </span>
                      <% end %>
                    </div>
                  <% else %>
                    <span class="text-gray-400">All Topics</span>
                  <% end %>
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<style>
  .beacon-online-large {
    display: inline-block;
    width: 16px;
    height: 16px;
    background-color: #10b981;
    border-radius: 50%;
    animation: pulse-green 2s infinite;
  }

  .beacon-offline-large {
    display: inline-block;
    width: 16px;
    height: 16px;
    background-color: #ef4444;
    border-radius: 50%;
  }

  @keyframes pulse-green {
    0%, 100% {
      opacity: 1;
      box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7);
    }
    50% {
      opacity: 0.8;
      box-shadow: 0 0 0 8px rgba(16, 185, 129, 0);
    }
  }

  .space-y-3 > * + * {
    margin-top: 0.75rem;
  }

  .space-y-4 > * + * {
    margin-top: 1rem;
  }

  .flex-wrap {
    flex-wrap: wrap;
  }
</style>

<script>
  function copyApiKey() {
    const apiKeyElement = document.getElementById('beacon-api-key');
    const apiKey = apiKeyElement.textContent;
    
    navigator.clipboard.writeText(apiKey).then(() => {
      const button = event.target;
      const originalText = button.textContent;
      button.textContent = 'Copied!';
      button.classList.add('text-green-600');
      
      setTimeout(() => {
        button.textContent = originalText;
        button.classList.remove('text-green-600');
      }, 2000);
    }).catch(err => {
      console.error('Failed to copy:', err);
      alert('Failed to copy API key to clipboard');
    });
  }
</script>

<% content_for :title, "Import Reports" %>

<div style="min-height: 100vh; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); padding: 2rem 0;">
  <div style="max-width: 1200px; margin: 0 auto; padding: 0 1rem; overflow-x: hidden;">
    
    <!-- Header Section -->
    <div style="margin-bottom: 2rem;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
        <div style="min-width: 0; flex: 1;">
          <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
            <div style="background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); color: white; padding: 0.75rem; border-radius: 0.75rem; flex-shrink: 0;">
              <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h1 style="font-size: 2.5rem; font-weight: 700; color: #1f2937; margin: 0; min-width: 0;">Import Reports</h1>
          </div>
          <p style="color: #6b7280; margin: 0; font-size: 1rem;">View and monitor import operations and their status</p>
        </div>
      </div>
      
      <!-- Breadcrumb -->
      <nav style="font-size: 0.875rem; color: #6b7280;">
        <ol style="display: flex; gap: 0.5rem; list-style: none; padding: 0; margin: 0;">
          <li><%= link_to "Dashboard", root_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li style="color: #374151; font-weight: 500;">Import Reports</li>
        </ol>
      </nav>
    </div>

    <!-- Filter Card -->
    <div style="margin-bottom: 2rem;">
      <div style="background: white; border-radius: 1rem; box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1); overflow: hidden; border: 1px solid #e5e7eb;">
        
        <!-- Filter Header -->
        <div style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%); padding: 1.5rem; color: white;">
          <div style="display: flex; align-items: center; gap: 1rem;">
            <div style="background: rgba(255, 255, 255, 0.2); padding: 0.5rem; border-radius: 0.5rem;">
              <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.414A1 1 0 013 6.707V4z"/>
              </svg>
            </div>
            <h2 style="font-size: 1.25rem; font-weight: 600; margin: 0;">Filter Reports</h2>
          </div>
        </div>
        
        <!-- Filter Body -->
        <div style="padding: 2rem;">
          <%= form_with url: import_reports_path, method: :get, local: true, data: { controller: "search", search_target: "search" } do |f| %>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
              
              <!-- Status Filter -->
              <div>
                <label style="display: block; font-weight: 600; color: #374151; margin-bottom: 0.5rem;">
                  <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <svg style="width: 1rem; height: 1rem; color: #6366f1;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Status
                  </div>
                </label>
                <%= f.select :status, options_for_select([["All Statuses", ""]] + @available_statuses.map { |status| [status.humanize, status] }, params[:status]), 
                    {}, 
                    style: "width: 100%; padding: 0.75rem; border: 2px solid #e5e7eb; border-radius: 0.5rem; font-size: 0.875rem; background: white; transition: all 0.2s;", 
                    data: { action: "change->search#submit" },
                    onfocus: "this.style.borderColor='#6366f1'; this.style.boxShadow='0 0 0 3px rgba(99, 102, 241, 0.1)'",
                    onblur: "this.style.borderColor='#e5e7eb'; this.style.boxShadow='none'" %>
              </div>
            </div>
            
            <!-- Clear Button -->
            <div style="margin-top: 1.5rem; display: flex; justify-content: end;">
              <%= link_to "Clear Filters", import_reports_path, 
                  style: "background: #f3f4f6; color: #374151; padding: 0.625rem 1.25rem; border-radius: 0.5rem; text-decoration: none; font-weight: 500; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.2s; border: 1px solid #d1d5db;",
                  onmouseover: "this.style.background='#e5e7eb'",
                  onmouseout: "this.style.background='#f3f4f6'" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Reports Table Card -->
    <%= turbo_frame_tag "reports-list" do %>
      <div style="background: white; border-radius: 1rem; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); overflow: hidden;">
        
        <!-- Card Header -->
        <div style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); padding: 2rem; color: white;">
          <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
            <div style="display: flex; align-items: center; gap: 1rem;">
              <div style="background: rgba(255, 255, 255, 0.2); padding: 0.75rem; border-radius: 0.75rem;">
                <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
              </div>
              <div>
                <h2 style="font-size: 1.5rem; font-weight: 700; margin: 0;">Import Reports</h2>
                <p style="margin: 0.25rem 0 0 0; color: rgba(255, 255, 255, 0.8); font-size: 0.875rem;">
                  <%= pluralize(@import_reports.count, 'report') %> found
                </p>
              </div>
            </div>
            
            <div style="display: flex; gap: 0.75rem; align-items: center;">
              <div style="background: rgba(255, 255, 255, 0.1); padding: 0.5rem 1rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500;">
                Total: <%= @import_reports.count %>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Table Content -->
        <div style="padding: 0;">
          <div class="table-container" style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse;">
              <thead>
                <tr style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border-bottom: 2px solid #e2e8f0;">
                  <th style="padding: 1.25rem 1.5rem; text-align: left; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                      <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
                      </svg>
                      ID
                    </div>
                  </th>
                  <th style="padding: 1.25rem 1.5rem; text-align: left; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                      <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                      </svg>
                      Import Type
                    </div>
                  </th>
                  <th style="padding: 1.25rem 1.5rem; text-align: left; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                      <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      Status
                    </div>
                  </th>
                  <th style="padding: 1.25rem 1.5rem; text-align: left; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                      <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      Started
                    </div>
                  </th>
                  <th style="padding: 1.25rem 1.5rem; text-align: left; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;" class="hide-mobile">
                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                      <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      Completed
                    </div>
                  </th>
                  <th style="padding: 1.25rem 1.5rem; text-align: left; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                      <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                      </svg>
                      Errors
                    </div>
                  </th>
                  <th style="padding: 1.25rem 1.5rem; text-align: right; font-size: 0.75rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody>
                <% if @import_reports.any? %>
                  <% @import_reports.each_with_index do |import_report, index| %>
                    <tr style="border-bottom: 1px solid #f1f5f9; transition: all 0.2s;" onmouseover="this.style.backgroundColor='#f8fafc'" onmouseout="this.style.backgroundColor='white'">
                      <td style="padding: 1.25rem 1.5rem;">
                        <div style="font-weight: 600; color: #111827; font-size: 0.875rem;">#<%= import_report.id %></div>
                      </td>
                      <td style="padding: 1.25rem 1.5rem;">
                        <div style="font-weight: 600; color: #111827; font-size: 0.875rem;"><%= import_report.import_type.humanize %></div>
                      </td>
                      <td style="padding: 1.25rem 1.5rem;">
                        <% if import_report.status == "completed" %>
                          <div style="display: inline-flex; align-items: center; gap: 0.375rem; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600;">
                            <svg style="width: 0.75rem; height: 0.75rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            <%= import_report.status.humanize %>
                          </div>
                        <% elsif import_report.status == "failed" %>
                          <div style="display: inline-flex; align-items: center; gap: 0.375rem; background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); color: white; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600;">
                            <svg style="width: 0.75rem; height: 0.75rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                            <%= import_report.status.humanize %>
                          </div>
                        <% else %>
                          <div style="display: inline-flex; align-items: center; gap: 0.375rem; background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); color: white; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600;">
                            <svg style="width: 0.75rem; height: 0.75rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <%= import_report.status.humanize %>
                          </div>
                        <% end %>
                      </td>
                      <td style="padding: 1.25rem 1.5rem;">
                        <div style="color: #6b7280; font-size: 0.875rem;">
                          <%= import_report.started_at&.strftime('%b %d, %Y at %I:%M %p') || "Not started" %>
                        </div>
                      </td>
                      <td style="padding: 1.25rem 1.5rem;" class="hide-mobile">
                        <div style="color: #6b7280; font-size: 0.875rem;">
                          <%= import_report.completed_at&.strftime('%b %d, %Y at %I:%M %p') || "Not completed" %>
                        </div>
                      </td>
                      <td style="padding: 1.25rem 1.5rem;">
                        <% if import_report.import_errors.any? %>
                          <div style="display: inline-flex; align-items: center; gap: 0.375rem; background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); color: white; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600;">
                            <svg style="width: 0.75rem; height: 0.75rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                            </svg>
                            <%= import_report.import_errors.count %>
                          </div>
                        <% else %>
                          <div style="display: inline-flex; align-items: center; gap: 0.375rem; background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 600;">
                            <svg style="width: 0.75rem; height: 0.75rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            0
                          </div>
                        <% end %>
                      </td>
                      <td style="padding: 1.25rem 1.5rem; text-align: right;">
                        <div style="display: flex; gap: 0.5rem; justify-content: flex-end;">
                          <%= link_to import_report, data: { turbo_frame: "_top" }, style: "background: #3b82f6; color: white; padding: 0.5rem 0.75rem; border-radius: 0.375rem; text-decoration: none; font-size: 0.75rem; font-weight: 600; display: inline-flex; align-items: center; gap: 0.375rem; transition: all 0.2s;" do %>
                            <svg style="width: 0.875rem; height: 0.875rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            <span>View</span>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="7" style="padding: 3rem 1.5rem; text-align: center;">
                      <div style="color: #9ca3af;">
                        <svg style="width: 3rem; height: 3rem; margin: 0 auto 1rem; color: #d1d5db;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <p style="font-size: 1rem; font-weight: 500; color: #6b7280; margin: 0;">No import reports found</p>
                        <p style="font-size: 0.875rem; color: #9ca3af; margin: 0.5rem 0 0 0;">Try adjusting your search filters.</p>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          
          <!-- Pagination -->
          <div style="background: #f8fafc; padding: 1.5rem; border-top: 1px solid #e2e8f0; display: flex; justify-content: space-between; align-items: center;">
            <div style="color: #6b7280; font-size: 0.875rem;">
              Showing <%= @import_reports.count %> of <%= @pagy.count %> reports
            </div>
            <div>
              <% if @pagy.pages > 1 %>
                <%= render "shared/pagination", pagy: @pagy %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  /* Enhanced button hover effects */
  a[href*="import_report"]:hover {
    transform: translateY(-2px) !important;
    box-shadow: 0 10px 25px -5px rgba(59, 130, 246, 0.4), 0 10px 10px -5px rgba(59, 130, 246, 0.1) !important;
  }
  
  /* Table hover effects */
  tbody tr:hover {
    background-color: #f8fafc !important;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    /* Container adjustments */
    div[style*="max-width: 1200px"] {
      padding: 0 1rem !important;
      margin: 0 auto !important;
    }
    
    /* Page padding adjustments */
    div[style*="min-height: 100vh"] {
      padding: 1rem 0 !important;
    }
    
    /* Header adjustments */
    div[style*="justify-content: space-between"] {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 1rem !important;
    }
    
    /* Title adjustments */
    h1 {
      font-size: 2rem !important;
    }
    
    /* Hide less important columns on mobile */
    .hide-mobile {
      display: none !important;
    }
    
    /* Make remaining columns more compact */
    th, td {
      padding: 0.75rem 0.5rem !important;
      font-size: 0.875rem !important;
    }
    
    /* Card adjustments - prevent overflow */
    div[style*="border-radius: 1rem"] {
      border-radius: 0.5rem !important;
      margin: 0 !important;
      max-width: 100% !important;
      box-sizing: border-box !important;
    }
    
    /* Filter grid to single column */
    div[style*="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr))"] {
      grid-template-columns: 1fr !important;
      gap: 1rem !important;
    }
    
    /* Stack pagination on mobile */
    div[style*="justify-content: space-between"][style*="align-items: center"] {
      flex-direction: column !important;
      gap: 1rem !important;
      align-items: flex-start !important;
    }
    
    /* Fix table overflow */
    .table-container {
      margin: 0 !important;
      padding: 0 !important;
    }
    
    /* Ensure table fits */
    table {
      min-width: 100% !important;
      width: 100% !important;
    }
    
    /* Action buttons stack on mobile */
    div[style*="display: flex; gap: 0.5rem; justify-content: flex-end"] {
      flex-direction: column !important;
      gap: 0.25rem !important;
      width: 100% !important;
    }
    
    /* Make buttons full width on mobile */
    div[style*="display: flex; gap: 0.5rem; justify-content: flex-end"] a {
      width: 100% !important;
      justify-content: center !important;
    }
  }
  
  @media (max-width: 640px) {
    /* Very small screen adjustments */
    div[style*="max-width: 1200px"] {
      padding: 0 0.5rem !important;
    }
    
    /* Ensure no overflow */
    * {
      max-width: 100% !important;
      box-sizing: border-box !important;
    }
    
    /* Remove border radius on very small screens */
    div[style*="border-radius: 1rem"] {
      border-radius: 0.25rem !important;
      margin: 0 !important;
    }
    
    /* More compact table */
    th, td {
      padding: 0.5rem 0.25rem !important;
      font-size: 0.75rem !important;
      word-wrap: break-word !important;
      word-break: break-word !important;
    }
    
    /* Card padding adjustments */
    div[style*="padding: 2rem"] {
      padding: 1rem !important;
    }
    
    div[style*="padding: 1.5rem"] {
      padding: 1rem !important;
    }
    
    /* Prevent horizontal scroll */
    body, html {
      overflow-x: hidden !important;
    }
    
    /* Ensure cards don't exceed viewport */
    div[style*="background: white"] {
      max-width: calc(100vw - 1rem) !important;
      overflow: hidden !important;
    }
  }
</style>

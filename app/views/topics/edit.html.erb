<% content_for :title, "Editing topic" %>

<div style="min-height: 100vh; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); padding: 2rem 0;">
  <div style="max-width: 1200px; margin: 0 auto; padding: 0 1rem;">
    
    <!-- Header Section -->
    <div style="margin-bottom: 2rem;">
      <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1.5rem;">
        <%= link_to topics_path, style: "color: #6b7280; hover:color: #374151; transition: colors 0.2s;" do %>
          <svg style="width: 1.5rem; height: 1.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
        <% end %>
        <h1 style="font-size: 2rem; font-weight: 700; color: #1f2937; margin: 0;">
          Edit Topic
        </h1>
        <div style="background: #fef3c7; color: #d97706; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500;">
          <%= @topic.title %>
        </div>
      </div>
      
      <!-- Breadcrumb -->
      <nav style="font-size: 0.875rem; color: #6b7280;">
        <ol style="display: flex; gap: 0.5rem; list-style: none; padding: 0; margin: 0;">
          <li><%= link_to "Dashboard", root_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li><%= link_to "Topics", topics_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li><%= link_to @topic.title, @topic, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li style="color: #374151; font-weight: 500;">Edit</li>
        </ol>
      </nav>
    </div>

    <!-- Main Form Card -->
    <div style="background: white; border-radius: 1rem; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); overflow: hidden;">
      
      <!-- Card Header -->
      <div style="background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); padding: 2rem; color: white;">
        <div style="display: flex; align-items: center; gap: 1rem;">
          <div style="background: rgba(255, 255, 255, 0.2); padding: 0.75rem; border-radius: 0.75rem;">
            <svg style="width: 2rem; height: 2rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          </div>
          <div>
            <h2 style="font-size: 1.5rem; font-weight: 700; margin: 0;">Update Topic Information</h2>
            <p style="margin: 0.5rem 0 0 0; color: rgba(255, 255, 255, 0.8);">
              Modify details for "<%= @topic.title %>"
            </p>
          </div>
        </div>
      </div>
      
      <!-- Form Content -->
      <div style="padding: 2rem;">
        <%= render "form", topic: @topic, errors: @errors %>
      </div>
    </div>

    <!-- Quick Actions -->
    <div style="margin-top: 2rem; display: flex; gap: 1rem; flex-wrap: wrap;">
      <%= link_to @topic, style: "background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); color: white; font-weight: 600; padding: 0.75rem 1.5rem; border-radius: 0.5rem; text-decoration: none; font-size: 0.875rem; box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.3); transition: all 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;" do %>
        <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        View Topic Details
      <% end %>
      
      <%= link_to topics_path, style: "background: #f3f4f6; color: #6b7280; font-weight: 600; padding: 0.75rem 1.5rem; border-radius: 0.5rem; text-decoration: none; font-size: 0.875rem; transition: all 0.2s; display: inline-flex; align-items: center; gap: 0.5rem;" do %>
        <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
        </svg>
        Back to All Topics
      <% end %>
    </div>

    <!-- Topic Statistics -->
    <div style="margin-top: 2rem; background: #f8fafc; border: 1px solid #e2e8f0; border-radius: 0.75rem; padding: 1.5rem;">
      <div style="display: flex; align-items: start; gap: 1rem;">
        <div style="background: #dcfce7; color: #16a34a; padding: 0.5rem; border-radius: 0.5rem; margin-top: 0.25rem;">
          <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
        <div>
          <h3 style="font-size: 1rem; font-weight: 600; color: #374151; margin: 0 0 0.75rem 0;">Topic Statistics</h3>
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; color: #6b7280; font-size: 0.875rem;">
            <div>
              <span style="font-weight: 500; color: #374151;">Language:</span> <%= @topic.language&.name || "Not specified" %>
            </div>
            <div>
              <span style="font-weight: 500; color: #374151;">Provider:</span> <%= @topic.provider&.name || "Not specified" %>
            </div>
            <div>
              <span style="font-weight: 500; color: #374151;">Documents:</span> <%= @topic.documents.count %> attached
            </div>
            <div>
              <span style="font-weight: 500; color: #374151;">Tags:</span> <%= @topic.tags.count %> assigned
            </div>
            <div>
              <span style="font-weight: 500; color: #374151;">Status:</span> 
              <span style="<%= @topic.archived? ? 'color: #dc2626;' : 'color: #059669;' %>"><%= @topic.archived? ? 'Archived' : 'Active' %></span>
            </div>
            <div>
              <span style="font-weight: 500; color: #374151;">Created:</span> <%= @topic.created_at.strftime("%B %d, %Y") %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

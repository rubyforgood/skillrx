<% content_for :title, "Topics" %>

<div style="min-height: 100vh; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); padding: 1.5rem 0;">
  <div style="max-width: 1200px; margin: 0 auto; padding: 0 1rem; overflow-x: hidden;">

    <!-- Header Section -->
    <div style="margin-bottom: 1.5rem;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; flex-wrap: wrap; gap: 1rem;">
        <div style="min-width: 0; flex: 1;">
          <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.25rem;">
            <div style="background: linear-gradient(135deg, #7c3aed 0%, #5b21b6 100%); color: white; padding: 0.625rem; border-radius: 0.5rem; flex-shrink: 0;">
              <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
            </div>
            <h1 style="font-size: 1.5rem; font-weight: 700; color: #1f2937; margin: 0; min-width: 0;">Topics</h1>
          </div>
          <p style="color: #6b7280; margin: 0; font-size: 0.875rem;">Manage educational topics and their associated content</p>
        </div>

        <%= link_to new_topic_path, style: "background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); color: white; padding: 0.75rem 1.5rem; border-radius: 0.5rem; text-decoration: none; font-weight: 600; font-size: 0.875rem; display: inline-flex; align-items: center; gap: 0.5rem; box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.3); transition: all 0.2s;", data: {turbo: false } do %>
          <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>Add New Topic</span>
        <% end %>
      </div>

      <!-- Breadcrumb -->
      <nav style="font-size: 0.75rem; color: #6b7280;">
        <ol style="display: flex; gap: 0.5rem; list-style: none; padding: 0; margin: 0;">
          <li><%= link_to "Dashboard", root_path, style: "color: #6b7280; text-decoration: none; hover:color: #374151;" %></li>
          <li style="color: #d1d5db;">/</li>
          <li style="color: #374151; font-weight: 500;">Topics</li>
        </ol>
      </nav>
    </div>

    <!-- Search Card -->
    <div class="search-card" style="margin-bottom: 1.5rem;">
      <%= render "search", providers: @providers, languages: @languages, params: search_params  %>
    </div>

    <!-- Topics Table Card -->
    <%= turbo_frame_tag "topics" do %>
      <div style="background: white; border-radius: 0.75rem; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); overflow: hidden;">

        <!-- Card Header -->
        <div style="background: linear-gradient(135deg, #7c3aed 0%, #5b21b6 100%); padding: 1.5rem; color: white;">
          <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
            <div style="display: flex; align-items: center; gap: 0.75rem;">
              <div style="background: rgba(255, 255, 255, 0.2); padding: 0.5rem; border-radius: 0.5rem;">
                <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
              </div>
              <div>
                <h2 style="font-size: 1.25rem; font-weight: 700; margin: 0;"><%= topics_title %></h2>
                <p style="margin: 0.25rem 0 0 0; color: rgba(255, 255, 255, 0.8); font-size: 0.75rem;">
                  <%= pluralize(@pagy.count, 'topic') %> found
                </p>
              </div>
            </div>

            <!-- Optional stats or filters can go here -->
            <div style="display: flex; gap: 0.5rem; align-items: center;">
              <div style="background: rgba(255, 255, 255, 0.1); padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.625rem; font-weight: 500;">
                Total: <%= @pagy.count %>
              </div>
            </div>
          </div>

          <!-- Optional stats or filters can go here -->
          <div style="display: flex; gap: 0.75rem; align-items: center;">
            <div style="background: rgba(255, 255, 255, 0.1); padding: 0.5rem 1rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500;">
              Total: <%= @topics.count %>
            </div>
          </div>
        </div>
      </div>

      <!-- Provider Selection -->
      <% if @available_providers.any? %>
        <div style="background: #f8fafc; border-bottom: 1px solid #e2e8f0; padding: 1rem 2rem;">
          <%= render "choose_provider", providers: @available_providers %>
        </div>

        <!-- Provider Selection -->
        <% if @available_providers.any? %>
          <div style="background: #f8fafc; border-bottom: 1px solid #e2e8f0; padding: 0.75rem 1.5rem;">
            <%= render "choose_provider", providers: @available_providers %>
          </div>
        <% end %>

        <!-- Table Content -->
        <div style="padding: 0;">
          <%= turbo_frame_tag "topic-list" do %>
            <div class="table-container" style="overflow-x: auto;">
              <table style="width: 100%; border-collapse: collapse; font-size: 0.875rem;">
                <thead>
                  <tr style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border-bottom: 2px solid #e2e8f0;">
                    <th style="padding: 1rem 1.25rem; text-align: left; font-size: 0.6875rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                      <div style="display: flex; align-items: center; gap: 0.375rem;">
                        <svg style="width: 0.875rem; height: 0.875rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                        </svg>
                        Title
                      </div>
                    </th>
                    <th style="padding: 1rem 1.25rem; text-align: left; font-size: 0.6875rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">Description</th>
                    <th class="hide-mobile" style="padding: 1rem 1.25rem; text-align: left; font-size: 0.6875rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">UID</th>
                    <th style="padding: 1rem 1.25rem; text-align: left; font-size: 0.6875rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                      <div style="display: flex; align-items: center; gap: 0.375rem;">
                        <svg style="width: 0.875rem; height: 0.875rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
                        </svg>
                        Language
                      </div>
                    </th>
                    <th class="hide-mobile" style="padding: 1rem 1.25rem; text-align: left; font-size: 0.6875rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                      <div style="display: flex; align-items: center; gap: 0.375rem;">
                        <svg style="width: 0.875rem; height: 0.875rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                        Provider
                      </div>
                    </th>
                    <th class="hide-mobile" style="padding: 1rem 1.25rem; text-align: left; font-size: 0.6875rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                      <div style="display: flex; align-items: center; gap: 0.375rem;">
                        <svg style="width: 0.875rem; height: 0.875rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        Documents
                      </div>
                    </th>
                    <th style="padding: 1rem 1.25rem; text-align: left; font-size: 0.6875rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">
                      <div style="display: flex; align-items: center; gap: 0.375rem;">
                        <svg style="width: 0.875rem; height: 0.875rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Status
                      </div>
                    </th>
                    <th class="actions-col" style="padding: 1rem 1.25rem; text-align: right; font-size: 0.6875rem; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 0.1em;">Actions</th>
                  </tr>
                </thead>
                <%= render "list", topics: @topics %>
              </table>
            </div>

            <!-- Pagination -->
            <div style="background: #f8fafc; padding: 1rem 1.5rem; border-top: 1px solid #e2e8f0; display: flex; justify-content: space-between; align-items: center;">
              <div style="color: #6b7280; font-size: 0.75rem;">
                Showing <%= @topics.size %> of <%= @pagy.count %> topics
              </div>
              <div>
                <% if @pagy.pages > 1 %>
                  <%= render "shared/pagination", pagy: @pagy %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  .table-container table { table-layout: fixed; }
  .table-container th, .table-container td { white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }

  .table-container th.actions-col { width: 180px; }
  .table-container td:last-child {
    display: flex;
    justify-content: flex-end;
    gap: 0.5rem;
    white-space: nowrap;
    overflow: visible;
    text-overflow: clip;
    width: 180px;
  }
  .table-container td:last-child a {
    padding: 0.5rem 0.75rem;
    font-size: 0.8rem;
  }

  a[href*="new_topic"]:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 15px -3px rgba(59, 130, 246, 0.4), 0 4px 6px -2px rgba(59, 130, 246, 0.1) !important;
  }
  tbody tr:hover { background-color: #f8fafc !important; }

  /* Tag pills in search */
  .search-card input[type="checkbox"][id*="tag"],
  .search-card input[type="checkbox"][name*="tag"] {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }
  .search-card label[for*="tag_"],
  .search-card label[for*="tag"],
  .search-card [data-tag] {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.4rem 0.7rem;
    margin: 0.25rem 0.3rem 0 0;
    border-radius: 9999px;
    border: 1px solid #e5e7eb;
    background: #ffffff;
    color: #374151;
    font-size: 0.75rem;
    line-height: 1;
    cursor: pointer;
    user-select: none;
    transition: background-color 0.15s ease, color 0.15s ease, border-color 0.15s ease, box-shadow 0.15s ease;
  }
  .search-card label[for*="tag_"]:hover,
  .search-card label[for*="tag"]:hover,
  .search-card [data-tag]:hover {
    border-color: #cbd5e1;
    background: #f8fafc;
  }
  .search-card input[type="checkbox"][id*="tag"]:focus-visible + label,
  .search-card input[type="checkbox"][name*="tag"]:focus-visible + label {
    outline: none;
    box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.25);
    border-color: #7c3aed;
  }
  .search-card input[type="checkbox"][id*="tag"]:checked + label,
  .search-card input[type="checkbox"][name*="tag"]:checked + label,
  .search-card [data-tag][aria-pressed="true"] {
    background: linear-gradient(135deg, #7c3aed 0%, #5b21b6 100%);
    color: #ffffff;
    border-color: #5b21b6;
  }
  .search-card input[type="checkbox"][id*="tag"]:checked + label::before,
  .search-card input[type="checkbox"][name*="tag"]:checked + label::before,
  .search-card [data-tag][aria-pressed="true"]::before {
    content: "âœ“";
    font-weight: 700;
    font-size: 0.75rem;
  }
  /* Compact on small screens */
  @media (max-width: 640px) {
    .search-card label[for*="tag_"],
    .search-card label[for*="tag"],
    .search-card [data-tag] {
      padding: 0.35rem 0.55rem;
      font-size: 0.7rem;
      margin-right: 0.25rem;
    }
  }

  @media (max-width: 1024px) {
    div[style*="max-width: 1200px"] {
      max-width: 100% !important;
      padding: 0 1rem !important;
    }
    .table-container th.actions-col,
    .table-container td:last-child { width: 160px; }
  }

  @media (max-width: 768px) {
    div[style*="max-width: 1200px"] { padding: 0 1rem !important; }
    div[style*="min-height: 100vh"] { padding: 1rem 0 !important; }
    div[style*="justify-content: space-between"] {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 1rem !important;
    }
    h1 { font-size: 1.75rem !important; }
    .hide-mobile { display: none !important; }
    th, td { padding: 0.75rem 0.5rem !important; font-size: 0.75rem !important; }
    div[style*="border-radius: 0.75rem"] {
      border-radius: 0.5rem !important;
      margin: 0 !important;
      max-width: 100% !important;
      box-sizing: border-box !important;
    }
    div[style*="background: linear-gradient(135deg, #7c3aed"] { padding: 1rem !important; }
    div[style*="justify-content: space-between"][style*="align-items: center"] {
      flex-direction: column !important;
      gap: 0.75rem !important;
      align-items: flex-start !important;
    }
    div[style*="background: linear-gradient(135deg, #7c3aed"] div[style*="justify-content: space-between"] {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 0.75rem !important;
    }
    .table-container { overflow-x: auto !important; -webkit-overflow-scrolling: touch !important; }
    table { font-size: 0.75rem !important; }

    .table-container th, .table-container td { white-space: normal; overflow: visible; text-overflow: unset; }
    .table-container td:last-child {
      display: grid;
      grid-auto-flow: row;
      justify-items: end;
      gap: 0.4rem;
      white-space: normal;
      width: auto;
    }
    .table-container td:last-child a { padding: 0.4rem 0.6rem; font-size: 0.75rem; }
  }

  @media (max-width: 640px) {
    div[style*="max-width: 1200px"] { padding: 0 0.5rem !important; }
    * { max-width: 100% !important; box-sizing: border-box !important; }
    div[style*="border-radius: 0.75rem"] { border-radius: 0.25rem !important; margin: 0 !important; }
    div[style*="padding: 1.5rem"] { padding: 1rem 0.75rem !important; }
    div[style*="padding: 1rem 1.5rem"] { padding: 0.75rem 1rem !important; }
    h1 { font-size: 1.5rem !important; }
    th, td { padding: 0.5rem 0.375rem !important; font-size: 0.6875rem !important; }
    td[style*="text-align: right"] a { padding: 0.25rem 0.5rem !important; font-size: 0.625rem !important; }
    body, html { overflow-x: hidden !important; }
    div[style*="background: white"] { max-width: calc(100vw - 1rem) !important; overflow: hidden !important; }
    th, td { word-wrap: break-word !important; word-break: break-word !important; max-width: 150px !important; }
    div[style*="gap: 0.75rem"] { gap: 0.5rem !important; }
    svg { width: 0.75rem !important; height: 0.75rem !important; }
  }

  @media (max-width: 480px) {
    div[style*="max-width: 1200px"] { padding: 0 0.25rem !important; }
    th, td { padding: 0.375rem 0.25rem !important; font-size: 0.625rem !important; max-width: 120px !important; }
    div[style*="display: flex"] { flex-direction: column !important; gap: 0.5rem !important; }
    a[href*="new_topic"] { width: 100% !important; justify-content: center !important; }
    .table-container td:last-child a { width: 100%; }
  }
</style>

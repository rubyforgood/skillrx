<div class="bg-white rounded-xl shadow-lg p-8 mb-8">
  <!-- Topic Content -->
  <% if @topic.description.present? %>
    <div class="mb-8">
      <h3 class="text-xl font-semibold text-gray-800 mb-4">Description</h3>
      <div class="text-gray-600 leading-relaxed">
        <%= simple_format(@topic.description) %>
      </div>
    </div>
  <% end %>

  <!-- Documents Section -->
  <% if @topic.documents.any? %>
    <div class="mb-8">
      <h3 class="text-xl font-semibold text-gray-800 mb-4">Documents</h3>
      <div class="grid gap-4">
        <% @topic.documents.each do |document| %>
          <div class="flex items-center gap-4 p-4 bg-gray-50 border border-gray-200 rounded-lg">
            <div class="bg-blue-500 text-white p-2 rounded-md flex items-center justify-center">
              <svg class="icon-size-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <div class="flex-1">
              <%= link_to document.filename, rails_blob_path(document, disposition: "inline"),
                  class: "text-blue-600 no-underline font-medium hover:underline" %>
              <div class="text-sm text-gray-500 mt-1">
                <%= number_to_human_size(document.byte_size) %>
              </div>
            </div>
            <div>
              <%= link_to rails_blob_path(document, disposition: "attachment"),
                  class: "bg-green-500 text-white py-2 px-4 rounded-md no-underline text-sm font-medium hover:bg-green-600 transition-colors" do %>
                Download
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Topic Details -->
  <div class="border-t border-gray-200 pt-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">

      <!-- Language -->
      <% if @topic.language.present? %>
        <div>
          <div class="text-sm font-semibold text-gray-700 mb-2">Language</div>
          <div class="text-gray-500"><%= @topic.language.name %></div>
        </div>
      <% end %>

      <!-- Provider -->
      <% if @topic.provider.present? %>
        <div>
          <div class="text-sm font-semibold text-gray-700 mb-2">Provider</div>
          <div class="text-gray-500"><%= @topic.provider.name %></div>
        </div>
      <% end %>

      <!-- Created Date -->
      <div>
        <div class="text-sm font-semibold text-gray-700 mb-2">Created</div>
        <div class="text-gray-500"><%= @topic.created_at.strftime("%B %d, %Y") %></div>
      </div>

      <!-- Last Updated -->
      <div>
        <div class="text-sm font-semibold text-gray-700 mb-2">Last Updated</div>
        <div class="text-gray-500"><%= @topic.updated_at.strftime("%B %d, %Y") %></div>
      </div>
    </div>
  </div>

  <!-- Tags -->
  <% if @topic.tags.any? %>
    <div class="border-t border-gray-200 pt-8 mt-8">
      <div class="text-sm font-semibold text-gray-700 mb-4">Tags</div>
      <div class="flex flex-wrap gap-2">
        <% @topic.tags.each do |tag| %>
          <span class="bg-blue-100 text-blue-800 py-1.5 px-3 rounded-full text-xs font-medium">
            <%= tag.name %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

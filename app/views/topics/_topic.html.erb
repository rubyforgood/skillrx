<div style="background: white; border-radius: 0.75rem; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); padding: 2rem; margin-bottom: 2rem;">
  <!-- Topic Content -->
  <% if @topic.description.present? %>
    <div style="margin-bottom: 2rem;">
      <h3 style="font-size: 1.25rem; font-weight: 600; color: #1f2937; margin-bottom: 1rem;">Description</h3>
      <div style="color: #4b5563; line-height: 1.6;">
        <%= simple_format(@topic.description) %>
      </div>
    </div>
  <% end %>

  <!-- Documents Section -->
  <% if @topic.documents.any? %>
    <div style="margin-bottom: 2rem;">
      <h3 style="font-size: 1.25rem; font-weight: 600; color: #1f2937; margin-bottom: 1rem;">Documents</h3>
      <div style="display: grid; gap: 1rem;">
        <% @topic.documents.each do |document| %>
          <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: #f8fafc; border: 1px solid #e2e8f0; border-radius: 0.5rem;">
            <div style="background: #3b82f6; color: white; padding: 0.5rem; border-radius: 0.375rem; display: flex; align-items: center; justify-content: center;">
              <svg style="width: 1.25rem; height: 1.25rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <div style="flex: 1;">
              <%= link_to document.filename, rails_blob_path(document, disposition: "inline"), 
                  style: "color: #2563eb; text-decoration: none; font-weight: 500; hover:text-decoration: underline;" %>
              <div style="font-size: 0.875rem; color: #6b7280; margin-top: 0.25rem;">
                <%= number_to_human_size(document.byte_size) %>
              </div>
            </div>
            <div>
              <%= link_to rails_blob_path(document, disposition: "attachment"), 
                  style: "background: #10b981; color: white; padding: 0.5rem 1rem; border-radius: 0.375rem; text-decoration: none; font-size: 0.875rem; font-weight: 500; hover:background: #059669; transition: background-color 0.2s;" do %>
                Download
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Topic Details -->
  <div style="border-top: 1px solid #e5e7eb; padding-top: 2rem;">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem;">
      
      <!-- Language -->
      <% if @topic.language.present? %>
        <div>
          <div style="font-size: 0.875rem; font-weight: 600; color: #374151; margin-bottom: 0.5rem;">Language</div>
          <div style="color: #6b7280;"><%= @topic.language.name %></div>
        </div>
      <% end %>

      <!-- Provider -->
      <% if @topic.provider.present? %>
        <div>
          <div style="font-size: 0.875rem; font-weight: 600; color: #374151; margin-bottom: 0.5rem;">Provider</div>
          <div style="color: #6b7280;"><%= @topic.provider.name %></div>
        </div>
      <% end %>

      <!-- Created Date -->
      <div>
        <div style="font-size: 0.875rem; font-weight: 600; color: #374151; margin-bottom: 0.5rem;">Created</div>
        <div style="color: #6b7280;"><%= @topic.created_at.strftime("%B %d, %Y") %></div>
      </div>

      <!-- Last Updated -->
      <div>
        <div style="font-size: 0.875rem; font-weight: 600; color: #374151; margin-bottom: 0.5rem;">Last Updated</div>
        <div style="color: #6b7280;"><%= @topic.updated_at.strftime("%B %d, %Y") %></div>
      </div>
    </div>
  </div>

  <!-- Tags -->
  <% if @topic.tags.any? %>
    <div style="border-top: 1px solid #e5e7eb; padding-top: 2rem; margin-top: 2rem;">
      <div style="font-size: 0.875rem; font-weight: 600; color: #374151; margin-bottom: 1rem;">Tags</div>
      <div style="display: flex; flex-wrap: gap: 0.5rem;">
        <% @topic.tags.each do |tag| %>
          <span style="background: #dbeafe; color: #1e40af; padding: 0.375rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500;">
            <%= tag.name %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
